{% comment %}
  ═══════════════════════════════════════════════════════════
  STELLAR REVERB - SITE FOOTER
  ═══════════════════════════════════════════════════════════
  
  Features:
  - Multi-column navigation
  - Social media links
  - Newsletter signup
  - Copyright + powered by
  - Payment icons
  
  ═══════════════════════════════════════════════════════════
{% endcomment %}

<style>
  .stellar-footer {
    position: relative;
    background: linear-gradient(
      135deg,
      rgba(13, 13, 13, 0.98),
      rgba(5, 5, 15, 0.96)
    );
    border-top: 1px solid rgba(108, 36, 179, 0.6);
    padding: var(--spacing-xl, 4rem) 0 var(--spacing-md, 1.5rem);
    margin-top: var(--spacing-xl, 4rem);
    color: rgba(255, 255, 255, 0.85);
  }

  .footer-inner {
    max-width: var(--container-max, 1400px);
    margin: 0 auto;
    padding: 0 var(--spacing-md, 1.5rem);
  }

  .footer-main {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: var(--spacing-lg, 2.5rem);
    margin-bottom: var(--spacing-lg, 2.5rem);
    padding-bottom: var(--spacing-lg, 2.5rem);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  /* Footer Brand Column */
  .footer-brand {
    grid-column: 1 / -1;
  }

  .footer-logo {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: var(--spacing-sm, 1rem);
    text-decoration: none;
  }

  .footer-logo-icon {
    width: 44px;
    height: 44px;
    border-radius: 10px;
    background: linear-gradient(135deg, var(--neon-magenta, #E13CFA), var(--cyan-blue, #28A8D6));
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 0 18px rgba(225, 60, 250, 0.6);
  }

  .footer-logo-icon svg {
    width: 22px;
    height: 22px;
    fill: #fff;
  }

  .footer-logo-text {
    font-family: var(--font-title, "Orbitron", sans-serif);
    font-weight: 900;
    font-size: 1.3rem;
    letter-spacing: 0.15em;
    background: linear-gradient(135deg, var(--neon-magenta, #E13CFA), var(--cyan-blue, #28A8D6));
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    text-transform: uppercase;
  }

  .footer-tagline {
    font-family: var(--font-body, "Montserrat", sans-serif);
    font-size: 0.9rem;
    font-style: italic;
    color: rgba(255, 255, 255, 0.65);
    margin-bottom: var(--spacing-sm, 1rem);
  }

  /* Footer Columns */
  .footer-column h3 {
    font-family: var(--font-title, "Orbitron", sans-serif);
    font-size: 0.9rem;
    font-weight: 700;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    color: var(--cyan-blue, #28A8D6);
    margin-bottom: var(--spacing-sm, 1rem);
  }

  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .footer-links a {
    font-family: var(--font-body, "Montserrat", sans-serif);
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.75);
    text-decoration: none;
    transition: all 0.2s ease;
    display: inline-block;
  }

  .footer-links a:hover {
    color: var(--cyan-blue, #28A8D6);
    text-shadow: 0 0 12px rgba(40, 168, 214, 0.7);
    transform: translateX(4px);
  }

  /* Newsletter */
  .footer-newsletter {
    max-width: 400px;
  }

  .newsletter-form {
    display: flex;
    gap: 0.5rem;
    margin-top: var(--spacing-sm, 1rem);
  }

  .newsletter-input {
    flex: 1;
    padding: 0.75rem 1rem;
    border-radius: 999px;
    border: 1px solid rgba(255, 255, 255, 0.2);
    background: rgba(0, 0, 0, 0.5);
    color: #fff;
    font-family: var(--font-body, "Montserrat", sans-serif);
    font-size: 0.9rem;
    transition: all 0.2s ease;
  }

  .newsletter-input::placeholder {
    color: rgba(255, 255, 255, 0.5);
  }

  .newsletter-input:focus {
    outline: none;
    border-color: var(--cyan-blue, #28A8D6);
    box-shadow: 0 0 16px rgba(40, 168, 214, 0.5);
  }

  .newsletter-btn {
    padding: 0.75rem 1.5rem;
    border-radius: 999px;
    border: none;
    background: linear-gradient(135deg, var(--neon-magenta, #E13CFA), var(--cyan-blue, #28A8D6));
    color: #fff;
    font-family: var(--font-title, "Orbitron", sans-serif);
    font-size: 0.8rem;
    font-weight: 700;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    cursor: pointer;
    transition: all 0.2s ease;
    white-space: nowrap;
  }

  .newsletter-btn:hover {
    filter: brightness(1.1);
    box-shadow: 0 0 20px rgba(225, 60, 250, 0.8);
  }

  /* Social Media */
  .footer-social {
    display: flex;
    gap: var(--spacing-sm, 1rem);
    margin-top: var(--spacing-sm, 1rem);
  }

  .social-link {
    width: 44px;
    height: 44px;
    border-radius: 10px;
    border: 1px solid rgba(255, 255, 255, 0.2);
    background: rgba(0, 0, 0, 0.4);
    display: flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .social-link:hover {
    border-color: var(--cyan-blue, #28A8D6);
    background: rgba(40, 168, 214, 0.15);
    box-shadow: 0 0 16px rgba(40, 168, 214, 0.5);
    transform: translateY(-2px);
  }

  .social-link svg {
    width: 22px;
    height: 22px;
    fill: rgba(255, 255, 255, 0.9);
  }

  /* Footer Bottom */
  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: var(--spacing-md, 1.5rem);
    flex-wrap: wrap;
    font-size: 0.85rem;
    color: rgba(255, 255, 255, 0.6);
  }

  .footer-copyright {
    font-family: var(--font-body, "Montserrat", sans-serif);
  }

  .footer-powered {
    font-family: var(--font-body, "Montserrat", sans-serif);
    color: rgba(255, 255, 255, 0.5);
  }

  .footer-powered a {
    color: var(--cyan-blue, #28A8D6);
    text-decoration: none;
  }

  .footer-powered a:hover {
    text-shadow: 0 0 12px rgba(40, 168, 214, 0.7);
  }

  /* Payment Icons */
  .footer-payment-icons {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .footer-payment-icons svg {
    width: 40px;
    height: 26px;
    opacity: 0.7;
    transition: opacity 0.2s ease;
  }

  .footer-payment-icons svg:hover {
    opacity: 1;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .footer-main {
      grid-template-columns: 1fr;
      gap: var(--spacing-md, 1.5rem);
    }

    .footer-bottom {
      flex-direction: column;
      text-align: center;
    }
  }
</style>

<footer class="stellar-footer" role="contentinfo">
  <div class="footer-inner">

    <div class="footer-main">

      <!-- Brand Column -->
      <div class="footer-brand">
        <a href="{{ routes.root_url }}" class="footer-logo">
          <div class="footer-logo-icon">
            <svg viewBox="0 0 24 24" aria-hidden="true">
              <rect x="3" y="6" width="18" height="12" rx="2"></rect>
              <rect x="6" y="9" width="3" height="2" rx="0.5"></rect>
              <rect x="15" y="9" width="3" height="2" rx="0.5"></rect>
              <circle cx="9" cy="14" r="1.3"></circle>
              <circle cx="15" cy="14" r="1.3"></circle>
            </svg>
          </div>
          <span class="footer-logo-text">{{ shop.name | default: 'Stellar Reverb' }}</span>
        </a>
        
        <p class="footer-tagline">
          {{ settings.footer_tagline | default: 'Sound. Style. Transmissions of Cosmic Identity.' }}
        </p>

        <!-- Social Media -->
        <div class="footer-social">
          {% if settings.social_twitter_url != blank %}
            <a href="{{ settings.social_twitter_url }}" class="social-link" target="_blank" rel="noopener" aria-label="Twitter">
              <svg viewBox="0 0 24 24"><path d="M23 3a10.9 10.9 0 01-3.14 1.53 4.48 4.48 0 00-7.86 3v1A10.66 10.66 0 013 4s-4 9 5 13a11.64 11.64 0 01-7 2c9 5 20 0 20-11.5a4.5 4.5 0 00-.08-.83A7.72 7.72 0 0023 3z"/></svg>
            </a>
          {% endif %}

          {% if settings.social_instagram_url != blank %}
            <a href="{{ settings.social_instagram_url }}" class="social-link" target="_blank" rel="noopener" aria-label="Instagram">
              <svg viewBox="0 0 24 24"><rect x="2" y="2" width="20" height="20" rx="5" ry="5" fill="none" stroke="currentColor" stroke-width="2"/><path d="M16 11.37A4 4 0 1112.63 8 4 4 0 0116 11.37z" fill="none" stroke="currentColor" stroke-width="2"/><line x1="17.5" y1="6.5" x2="17.51" y2="6.5" stroke="currentColor" stroke-width="2"/></svg>
            </a>
          {% endif %}

          {% if settings.social_facebook_url != blank %}
            <a href="{{ settings.social_facebook_url }}" class="social-link" target="_blank" rel="noopener" aria-label="Facebook">
              <svg viewBox="0 0 24 24"><path d="M18 2h-3a5 5 0 00-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z"/></svg>
            </a>
          {% endif %}

          {% if settings.social_tiktok_url != blank %}
            <a href="{{ settings.social_tiktok_url }}" class="social-link" target="_blank" rel="noopener" aria-label="TikTok">
              <svg viewBox="0 0 24 24"><path d="M9 12a4 4 0 1 0 4 4V4a5 5 0 0 0 5 5"/></svg>
            </a>
          {% endif %}

          {% if settings.social_youtube_url != blank %}
            <a href="{{ settings.social_youtube_url }}" class="social-link" target="_blank" rel="noopener" aria-label="YouTube">
              <svg viewBox="0 0 24 24"><path d="M22.54 6.42a2.78 2.78 0 00-1.94-2C18.88 4 12 4 12 4s-6.88 0-8.6.46a2.78 2.78 0 00-1.94 2A29 29 0 001 11.75a29 29 0 00.46 5.33A2.78 2.78 0 003.4 19c1.72.46 8.6.46 8.6.46s6.88 0 8.6-.46a2.78 2.78 0 001.94-2 29 29 0 00.46-5.25 29 29 0 00-.46-5.33z"/><polygon points="9.75 15.02 15.5 11.75 9.75 8.48 9.75 15.02"/></svg>
            </a>
          {% endif %}
        </div>
      </div>

      <!-- Navigation Column 1 -->
      <div class="footer-column">
        <h3>{{ 'footer.shop' | t | default: 'Shop' }}</h3>
        <ul class="footer-links" role="list">
          {% for link in linklists.footer-shop.links %}
            <li>
              <a href="{{ link.url }}">{{ link.title }}</a>
            </li>
          {% endfor %}
        </ul>
      </div>

      <!-- Navigation Column 2 -->
      <div class="footer-column">
        <h3>{{ 'footer.about' | t | default: 'About' }}</h3>
        <ul class="footer-links" role="list">
          {% for link in linklists.footer-about.links %}
            <li>
              <a href="{{ link.url }}">{{ link.title }}</a>
            </li>
          {% endfor %}
        </ul>
      </div>

      <!-- Newsletter Column -->
      <div class="footer-column footer-newsletter">
        <h3>{{ 'footer.newsletter' | t | default: 'Join the Signal' }}</h3>
        <p style="margin-bottom: 1rem; color: rgba(255,255,255,0.7); font-size: 0.9rem;">
          {{ settings.newsletter_text | default: 'Get early access to new capsule drops and hidden relics.' }}
        </p>
        
        {% form 'customer', id: 'footer-newsletter-form' %}
          <div class="newsletter-form">
            <input 
              type="email" 
              name="contact[email]" 
              class="newsletter-input"
              placeholder="your@email.com"
              required
              aria-label="Email address"
            >
            <input type="hidden" name="contact[tags]" value="newsletter">
            <button type="submit" class="newsletter-btn">
              Subscribe
            </button>
          </div>
        {% endform %}
      </div>

    </div>

    <!-- Footer Bottom -->
    <div class="footer-bottom">
      
      <div class="footer-copyright">
        &copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. {{ 'footer.all_rights_reserved' | t | default: 'All rights reserved.' }}
      </div>

      <div class="footer-powered">
        Powered by <a href="https://www.shopify.com" target="_blank" rel="noopener">Shopify</a>
      </div>

      <!-- Payment Icons -->
      {% if settings.show_payment_icons %}
        <div class="footer-payment-icons">
          {{ shop.enabled_payment_types | payment_type_svg_tag }}
        </div>
      {% endif %}

    </div>

  </div>
</footer>
