{% comment %}
Konami unlock: Up Up Down Down Left Right Left Right B A
Toggles #secret-archive by adding class "is-open"
{% endcomment %}
<script>
(function(){
  const seq = ['ArrowUp','ArrowUp','ArrowDown','ArrowDown','ArrowLeft','ArrowRight','ArrowLeft','ArrowRight','b','a'];
  let input = [];
  window.addEventListener('keydown',(e)=>{
    const k = e.key.length===1 ? e.key.toLowerCase() : e.key;
    input.push(k);
    input = input.slice(-seq.length);
    if(seq.every((v,i)=>v===input[i])){
      const el = document.getElementById('secret-archive');
      if(el){ el.classList.toggle('is-open'); }
      input = [];
    }
  });
})();
</script>