  Used only on the gated Floating Archive page
{% endcomment %}

<style>
  .floating-archive-page {
    min-height: 80vh;
    position: relative;
  }

  /* ===== UNLOCKED ARCHIVE ===== */
  .archive-unlocked {
    position: relative;
    padding: var(--spacing-xl, 4rem) 0;
  }

  .cosmic-floating-wrapper {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0.3;
    pointer-events: none;
  }

  .archive-header {
    text-align: center;
    max-width: 800px;
    margin: 0 auto var(--spacing-xl, 4rem);
  }

  .status-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    border-radius: var(--border-radius-pill, 999px);
    background: linear-gradient(135deg, var(--radioactive-green, #00F0AC), var(--cyan-blue, #28A8D6));
    color: var(--void-black, #0D0D0D);
    font-family: var(--font-title, "Orbitron", sans-serif);
    font-size: 0.85rem;
    font-weight: 700;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    margin-bottom: var(--spacing-md, 1.5rem);
    box-shadow: 0 0 20px rgba(0, 240, 172, 0.7);
  }

  .archive-title {
    font-family: var(--font-title, "Orbitron", sans-serif);
    font-size: clamp(2.5rem, 6vw, 4rem);
    font-weight: 900;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    margin-bottom: var(--spacing-md, 1.5rem);
    background: linear-gradient(135deg, var(--neon-magenta, #E13CFA), var(--cyan-blue, #28A8D6));
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .archive-intro {
    font-size: 1.125rem;
    line-height: 1.7;
    color: rgba(255, 255, 255, 0.8);
  }

  /* ===== LOCKED GATE ===== */
  .archive-locked {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--spacing-xl, 4rem) 0;
  }

  .lock-backdrop {
    position: absolute;
    inset: 0;
    overflow: hidden;
    z-index: 0;
  }

  .lock-gradient {
    position: absolute;
    inset: 0;
    background: 
      radial-gradient(circle at 30% 50%, rgba(225, 60, 250, 0.3) 0%, transparent 50%),
      radial-gradient(circle at 70% 50%, rgba(40, 168, 214, 0.3) 0%, transparent 50%);
    animation: gradient-shift 8s ease-in-out infinite;
  }

  .lock-particles {
    position: absolute;
    inset: 0;
  }

  .lock-particles .particle {
    position: absolute;
    width: 3px;
    height: 3px;
    background: var(--cyan-blue, #28A8D6);
    border-radius: 50%;
    opacity: 0.6;
    animation: particle-float 6s ease-in-out infinite;
  }

  .lock-particles .particle:nth-child(odd) {
    background: var(--neon-magenta, #E13CFA);
    animation-duration: 8s;
  }

  {% for i in (1..20) %}
  .lock-particles .particle:nth-child({{ i }}) {
    top: {{ i | times: 5 }}%;
    left: {{ i | modulo: 10 | times: 10 }}%;
    animation-delay: {{ i | times: 0.2 }}s;
  }
  {% endfor %}

  .lock-content {
    position: relative;
    z-index: 1;
    max-width: 600px;
    margin: 0 auto;
    text-align: center;
  }

  .lock-icon {
    margin-bottom: var(--spacing-lg, 2.5rem);
    animation: lock-float 3s ease-in-out infinite;
  }

  .lock-icon svg {
    color: var(--cyan-blue, #28A8D6);
    filter: drop-shadow(0 0 20px rgba(40, 168, 214, 0.8));
  }

  .lock-title {
    font-family: var(--font-title, "Orbitron", sans-serif);
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 900;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    margin-bottom: var(--spacing-md, 1.5rem);
    background: linear-gradient(135deg, var(--neon-magenta, #E13CFA), var(--cyan-blue, #28A8D6));
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .lock-message {
    font-size: 1.125rem;
    line-height: 1.7;
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: var(--spacing-xl, 4rem);
  }

  .unlock-form-wrapper {
    background: rgba(13, 13, 13, 0.8);
    border: 2px solid rgba(40, 168, 214, 0.6);
    border-radius: var(--border-radius-lg, 18px);
    padding: var(--spacing-lg, 2.5rem);
    backdrop-filter: blur(20px);
    margin-bottom: var(--spacing-lg, 2.5rem);
    box-shadow: 0 8px 40px rgba(0, 0, 0, 0.6);
  }

  .unlock-form {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm, 1rem);
  }

  .email-input {
    width: 100%;
    padding: 1rem 1.5rem;
    border-radius: var(--border-radius-pill, 999px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    background: rgba(0, 0, 0, 0.5);
    color: #fff;
    font-family: var(--font-body, "Montserrat", sans-serif);
    font-size: 1rem;
    text-align: center;
    transition: all 0.2s ease;
  }

  .email-input::placeholder {
    color: rgba(255, 255, 255, 0.5);
  }

  .email-input:focus {
    outline: none;
    border-color: var(--cyan-blue, #28A8D6);
    box-shadow: 0 0 20px rgba(40, 168, 214, 0.5);
  }

  .unlock-btn {
    width: 100%;
    padding: 1rem 2rem;
  }

  .form-notice {
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.7);
    margin-top: var(--spacing-sm, 1rem);
  }

  .already-member {
    padding: var(--spacing-md, 1.5rem) 0;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    color: rgba(255, 255, 255, 0.7);
  }

  .already-member a {
    color: var(--cyan-blue, #28A8D6);
    text-decoration: none;
    font-weight: 600;
    transition: color 0.2s ease;
  }

  .already-member a:hover {
    color: var(--neon-magenta, #E13CFA);
  }

  .learn-more {
    margin-top: var(--spacing-sm, 1rem);
  }

  .signal-link {
    color: var(--radioactive-green, #00F0AC);
    text-decoration: none;
    font-family: var(--font-title, "Orbitron", sans-serif);
    font-size: 0.9rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    transition: all 0.2s ease;
  }

  .signal-link:hover {
    text-shadow: 0 0 12px rgba(0, 240, 172, 0.8);
  }

  @keyframes gradient-shift {
    0%, 100% { transform: scale(1) rotate(0deg); }
    50% { transform: scale(1.1) rotate(2deg); }
  }

  @keyframes particle-float {
    0%, 100% { transform: translateY(0); opacity: 0.6; }
    50% { transform: translateY(-50px); opacity: 1; }
  }

  @keyframes lock-float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }

  @media (max-width: 640px) {
    .unlock-form-wrapper {
      padding: var(--spacing-md, 1.5rem);
    }

    .email-input,
    .unlock-btn {
      padding: 0.875rem 1.25rem;
    }
  }
</style>