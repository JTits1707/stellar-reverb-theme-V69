  @keyframes modalFadeIn {
    from {
      opacity: 0;
      transform: scale(0.9);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }
  
  /* Responsive */
  @media (max-width: 768px) {
    .lore-modal-container {
      width: 95%;
      max-height: 90vh;
    }
    
    .lore-modal-header {
      padding: 1.5rem 1.5rem 1rem;
    }
    
    .lore-modal-body {
      padding: 1.5rem;
    }
    
    .lore-modal-footer {
      padding: 1rem 1.5rem;
