{% liquid
  assign capsule_num = capsule.capsule_number.value | default: '000'
  assign theme_hex = capsule.theme_color.value | default: '#E13CFA'
%}

<article class="stellar-capsule terminal-card" 
         data-capsule-number="{{ capsule_num }}"
         style="--card-glow: {{ theme_hex }};">
  
  <div class="stellar-capsule__image-wrapper">
    <div class="terminal-hud">
      <span class="hud-id">SYS_REF: {{ capsule_num }}</span>
      <div class="hud-decrypt-bar">
        <div class="hud-progress animate-pulse"></div>
      </div>
    </div>
    
    {% if capsule.featured_image %}
      <img class="stellar-capsule__image" 
           src="{{ capsule.featured_image | image_url: width: 800 }}"
           alt="{{ capsule.title.value }}"
           loading="lazy">
    {% endif %}
  </div>

  <div class="stellar-capsule__content">
    <div class="terminal-header">
      <span class="terminal-status">SIGNAL DETECTED</span>
      <span class="terminal-date">{{ capsule.release_date.value | date: "%Y.%m" }}</span>
    </div>
    
    <h3 class="stellar-capsule__title glitch-text" data-text="{{ capsule.title.value }}">
      <a href="{{ capsule.page_url.value }}">{{ capsule.title.value }}</a>
    </h3>

    <div class="terminal-footer">
      <a href="{{ capsule.page_url.value }}" class="btn-terminal">DECRYPT TRANSMISSION</a>
    </div>
  </div>
</article>