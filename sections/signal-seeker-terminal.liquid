 {% comment %}
  ═══════════════════════════════════════════════════════════
  STELLAR REVERB - SIGNAL SEEKER TERMINAL (REBUILT)
  ═══════════════════════════════════════════════════════════
{% endcomment %}

<section class="signal-seeker-terminal" data-section-id="{{ section.id }}">
  
  <div class="terminal-background">
    {% if section.settings.show_particles %}<canvas class="terminal-particles" id="terminalParticles"></canvas>{% endif %}
    {% if section.settings.show_matrix %}<div class="terminal-matrix-rain"></div>{% endif %}
    <div class="terminal-scanlines"></div>
  </div>

  <div class="terminal-container">
    {%- comment -%} Triple Triangle Logo {%- endcomment -%}
    <div class="terminal-logo">
      <svg class="triangle-logo" viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg">
        <path class="triangle-outer" d="M100 20 L180 180 L20 180 Z" fill="none" stroke="url(#grad-om)" stroke-width="3"/>
        <path class="triangle-middle" d="M100 40 L160 160 L40 160 Z" fill="none" stroke="url(#grad-mc)" stroke-width="2.5"/>
        <path class="triangle-inner" d="M100 60 L140 140 L60 140 Z" fill="none" stroke="url(#grad-cg)" stroke-width="2"/>
        
        <defs>
          <linearGradient id="grad-om" x1="0%" y1="0%" x2="100%" y2="100%">
            <stop offset="0%" style="stop-color:#FF00FF;" /><stop offset="100%" style="stop-color:#00F0FF;" />
          </linearGradient>
          <linearGradient id="grad-mc" x1="0%" y1="0%" x2="100%" y2="100%">
            <stop offset="0%" style="stop-color:#00F0FF;" /><stop offset="100%" style="stop-color:#00FF41;" />
          </linearGradient>
          <linearGradient id="grad-cg" x1="0%" y1="0%" x2="100%" y2="100%">
            <stop offset="0%" style="stop-color:#00FF41;" /><stop offset="100%" style="stop-color:#FF00FF;" />
          </linearGradient>
        </defs>
      </svg>
    </div>

    <div class="terminal-header">
      <h2 class="terminal-title">
        <span class="glitch-text" data-text="SIGNAL SEEKER PROTOCOL DETECTED">SIGNAL SEEKER PROTOCOL DETECTED</span>
      </h2>
      <p class="terminal-subtitle">
        <span class="restricted-text">UNAUTHORIZED ACCESS RESTRICTED</span><br>
        <span class="subtitle-light">Activate your clearance to unlock the network</span>
      </p>
    </div>

    <div class="terminal-window">
      <div class="terminal-window-header">
        <div class="terminal-dots"><span class="dot dot-red"></span><span class="dot dot-yellow"></span><span class="dot dot-green"></span></div>
        <div class="terminal-window-title">SIGNAL_SEEKER_PROTOCOL.EXE</div>
      </div>

      <div class="terminal-content">
        <div class="terminal-prompt">> CLEARANCE_LEVEL: SIGNAL_SEEKER</div>
        <div class="terminal-divider">════════════════════════════════════════════</div>

        <div class="benefits-grid">
          <div class="benefit-card">
            <h3 class="benefit-title">INSTANT_ACCESS_DISCOUNT</h3>
            <p class="benefit-desc">15% OFF + FREE SHIPPING on your first order</p>
          </div>
          <div class="benefit-card">
            <h3 class="benefit-title">MEMBERS_ONLY_FREQUENCIES</h3>
            <p class="benefit-desc">Exclusive drops. Limited quantities. Never restocked.</p>
          </div>
          <div class="benefit-card">
            <h3 class="benefit-title">PRIORITY_LAUNCH_CLEARANCE</h3>
            <p class="benefit-desc">24-hour head start on every capsule drop</p>
          </div>
          <div class="benefit-card">
            <h3 class="benefit-title">COMMAND_CENTER_ACCESS</h3>
            <p class="benefit-desc">Personal dashboard to track drops and manage alerts.</p>
          </div>
        </div>

        <div class="terminal-signup">
          {% form 'customer', class: 'signal-seeker-form' %}
            <input type="hidden" name="contact[tags]" value="newsletter, signal_seeker">
            <div class="form-prompt">> ENTER_SIGNAL_FREQUENCY:</div>
            <div class="form-input-wrapper">
              <input type="email" name="contact[email]" class="terminal-input" placeholder="your.signal@frequency.com" required>
              <span class="input-cursor"></span>
            </div>
            <button type="submit" class="terminal-button">⚡ INITIATE PROTOCOL ⚡</button>
          {% endform %}
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Signal Seeker Terminal",
  "settings": [
    { "type": "checkbox", "id": "show_particles", "label": "Show particles", "default": true },
    { "type": "checkbox", "id": "show_matrix", "label": "Show matrix rain", "default": true }
  ],
  "presets": [{ "name": "Signal Seeker Terminal" }]
}
{% endschema %}