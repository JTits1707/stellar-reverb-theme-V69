{% comment %}
  =====================================================
  SIGNAL FEED (Beast Mode V2 - Auto-Drift)
  =====================================================
{% endcomment %}

{{ 'secondary-drift-beast.css' | asset_url | stylesheet_tag }}

<section class="secondary-drift-section signal-feed" data-section-id="{{ section.id }}">
  <div class="drift-container">
    <div class="feed-header">
      <span class="feed-status animate-pulse">‚óè LIVE_FEED</span>
      <h2 class="drift-title">{{ section.settings.drift_title | default: 'LIVE_EXTRUDED_FEED' }}</h2>
    </div>
    
    {%- assign collection = collections[section.settings.collection_handle] -%}
    
    <div class="drift-marquee">
      <div class="drift-track">
        {% comment %} Double the loop for a seamless infinite scroll {% endcomment %}
        {% for i in (1..2) %}
          {% for product in collection.products limit: 10 %}
            <div class="drift-item">
              <a href="{{ product.url }}" class="drift-link">
                <div class="drift-image-wrapper">
                  <img src="{{ product.featured_image | image_url: width: 400 }}" 
                       alt="{{ product.title }}" 
                       loading="lazy" 
                       class="drift-image">
                </div>
                <div class="drift-info">
                  <span class="drift-id">ID_{{ product.id | last: 4 }}</span>
                  <h3 class="drift-name">{{ product.title | upcase }}</h3>
                </div>
              </a>
            </div>
          {% endfor %}
        {% endfor %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Secondary Drift Section",
  "settings": [
    { "type": "text", "id": "drift_title", "label": "Title", "default": "LIVE_EXTRUDED_FEED" },
    { "type": "collection", "id": "collection_handle", "label": "Collection" }
  ],
  "presets": [{ "name": "Secondary Drift Section" }]
}
{% endschema %}
