{% if section.settings.enable_konami %}
  <div class="stellar-rift__secret" data-secret-archive>
    <div class="stellar-rift__secret-content">
      <h3 class="stellar-rift__secret-title">{{ section.settings.secret_message }}</h3>
      <p class="stellar-rift__secret-message">
        You've discovered the hidden frequency. The secret archive contains lost transmissions 
        never meant to be found. Only those who speak the ancient code can access this realm.
      </p>
      <a href="/pages/secret-archive" class="stellar-rift__secret-link">
        ENTER SECRET ARCHIVE
      </a>
      <p class="stellar-rift__secret-close" data-close-secret>
        [ Close Transmission ]
      </p>
    </div>
  </div>
{% endif %}

<script>
  // MAILCHIMP FORM HANDLER
  const riftForm = document.querySelector('[data-rift-form]');
  const successMessage = document.querySelector('[data-success-message]');

  if (riftForm) {
    riftForm.addEventListener('submit', function(e) {
      // Show success message (form submits to Mailchimp in new tab)
      setTimeout(() => {
        successMessage.classList.add('active');
        riftForm.reset();
        
        // Hide success after 5 seconds
        setTimeout(() => {
          successMessage.classList.remove('active');
        }, 5000);
      }, 500);
    });
  }

  {% if section.settings.enable_konami %}
    // KONAMI CODE EASTER EGG
    // UP UP DOWN DOWN LEFT RIGHT LEFT RIGHT B A
    const konamiCode = [
      'ArrowUp', 'ArrowUp', 
      'ArrowDown', 'ArrowDown', 
      'ArrowLeft', 'ArrowRight', 
      'ArrowLeft', 'ArrowRight', 
      'KeyB', 'KeyA'
    ];
    let konamiIndex = 0;

    document.addEventListener('keydown', (e) => {
      if (e.code === konamiCode[konamiIndex]) {
        konamiIndex++;
        
        if (konamiIndex === konamiCode.length) {
          // UNLOCK SECRET ARCHIVE
          const secretArchive = document.querySelector('[data-secret-archive]');
          secretArchive.classList.add('active');
          
          // Play unlock sound (optional)
          try {
            const audio = new Audio('https://cdn.shopify.com/s/files/1/YOUR_STORE/unlock-sound.mp3');
            audio.volume = 0.3;
            audio.play();
          } catch (e) {
            console.log('Audio not available');
          }
          
          konamiIndex = 0;
        }
      } else {
        konamiIndex = 0;
      }
    });

    // CLOSE SECRET ARCHIVE
    const closeSecret = document.querySelector('[data-close-secret]');
    if (closeSecret) {
      closeSecret.addEventListener('click', () => {
        document.querySelector('[data-secret-archive]').classList.remove('active');
      });
    }

    // Close on ESC key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        document.querySelector('[data-secret-archive]')?.classList.remove('active');
      }
    });
  {% endif %}
</script>

