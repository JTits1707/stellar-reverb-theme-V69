{% comment %}
  STELLAR REVERB - Rift Signup Section
  Mailchimp integration with Konami code easter egg
  Cosmic newsletter signup with secret archive unlock
{% endcomment %}

<style>
  .stellar-rift {
    padding: 8rem 2rem;
    background: linear-gradient(135deg, var(--void-black) 0%, var(--cosmic-purple) 100%);
    position: relative;
    overflow: hidden;
  }

  .stellar-rift::before {
    content: '';
    position: absolute;
    inset: 0;
    background: 
      radial-gradient(circle at 20% 50%, rgba(225, 60, 250, 0.15) 0%, transparent 50%),
      radial-gradient(circle at 80% 50%, rgba(40, 168, 214, 0.15) 0%, transparent 50%);
    animation: riftPulse 8s ease-in-out infinite;
  }

  @keyframes riftPulse {
    0%, 100% { opacity: 0.5; transform: scale(1); }
    50% { opacity: 1; transform: scale(1.1); }
  }

  .stellar-rift__container {
    max-width: 700px;
    margin: 0 auto;
    position: relative;
    z-index: 10;
  }

  .stellar-rift__portal {
    background: rgba(10, 10, 10, 0.85);
    border: 3px solid var(--neon-magenta);
    border-radius: 16px;
    padding: 3rem;
    box-shadow: 
      0 0 60px rgba(225, 60, 250, 0.5),
      inset 0 0 60px rgba(225, 60, 250, 0.1);
    backdrop-filter: blur(20px);
    text-align: center;
  }

  .stellar-rift__icon {
    width: 80px;
    height: 80px;
    margin: 0 auto 2rem;
    background: linear-gradient(135deg, var(--neon-magenta), var(--cyan-blue));
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2.5rem;
    animation: iconFloat 3s ease-in-out infinite;
  }

  @keyframes iconFloat {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }

  .stellar-rift__title {
    font-family: 'Orbitron', sans-serif;
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 900;
    color: var(--neon-magenta);
    text-transform: uppercase;
    letter-spacing: 0.15em;
    margin-bottom: 1rem;
    text-shadow: 0 0 20px rgba(225, 60, 250, 0.6);
  }

  .stellar-rift__subtitle {
    color: var(--chrome-silver);
    font-family: 'PP Mori', sans-serif;
    font-size: 1.125rem;
    line-height: 1.6;
    margin-bottom: 2.5rem;
    opacity: 0.9;
  }

  .stellar-rift__form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .stellar-rift__input-group {
    display: flex;
    gap: 1rem;
  }

  .stellar-rift__input {
    flex: 1;
    padding: 1rem 1.5rem;
    background: rgba(255, 255, 255, 0.05);
    border: 2px solid var(--cyan-blue);
    border-radius: 8px;
    color: var(--chrome-silver);
    font-family: 'PP Mori', sans-serif;
    font-size: 1rem;
    transition: all 0.3s ease;
  }

  .stellar-rift__input::placeholder {
    color: rgba(192, 192, 192, 0.5);
  }

  .stellar-rift__input:focus {
    outline: none;
    border-color: var(--neon-magenta);
    box-shadow: 0 0 20px rgba(225, 60, 250, 0.4);
    background: rgba(255, 255, 255, 0.08);
  }

  .stellar-rift__button {
    padding: 1.25rem 3rem;
    background: linear-gradient(135deg, var(--neon-magenta), var(--cosmic-purple));
    border: none;
    border-radius: 8px;
    color: white;
    font-family: 'Orbitron', sans-serif;
    font-weight: 700;
    font-size: 1.125rem;
    text-transform: uppercase;
    letter-spacing: 2px;
    cursor: pointer;
    transition: all 0.4s ease;
    box-shadow: 0 4px 20px rgba(225, 60, 250, 0.4);
  }

  .stellar-rift__button:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 30px rgba(225, 60, 250, 0.6);
    background: linear-gradient(135deg, var(--cyan-blue), var(--neon-magenta));
  }

  .stellar-rift__button:active {
    transform: translateY(-1px);
  }

  .stellar-rift__benefits {
    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 1px solid rgba(225, 60, 250, 0.3);
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 1.5rem;
    text-align: center;
  }

  .stellar-rift__benefit {
    color: var(--chrome-silver);
    font-family: 'PP Mori', sans-serif;
    font-size: 0.9rem;
  }

  .stellar-rift__benefit-icon {
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
    display: block;
  }

  /* SUCCESS MESSAGE */
  .stellar-rift__success {
    display: none;
    padding: 1.5rem;
    background: rgba(0, 240, 172, 0.1);
    border: 2px solid var(--radioactive-green);
    border-radius: 8px;
    color: var(--radioactive-green);
    font-family: 'Orbitron', sans-serif;
    margin-top: 1rem;
  }

  .stellar-rift__success.active {
    display: block;
    animation: successFade 0.5s ease;
  }

  @keyframes successFade {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }

  /* SECRET KONAMI UNLOCK */
  .stellar-rift__secret {
    display: none;
    position: fixed;
    inset: 0;
    background: rgba(10, 10, 10, 0.95);
    z-index: 9999;
    align-items: center;
    justify-content: center;
    animation: secretReveal 0.8s ease;
  }

  .stellar-rift__secret.active {
    display: flex;
  }

  @keyframes secretReveal {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  .stellar-rift__secret-content {
    text-align: center;
    max-width: 600px;
    padding: 3rem;
    background: linear-gradient(135deg, var(--cosmic-purple), var(--void-black));
    border: 3px solid var(--electric-yellow);
    border-radius: 16px;
    box-shadow: 0 0 80px rgba(244, 255, 48, 0.8);
  }

  .stellar-rift__secret-title {
    font-family: 'Orbitron', sans-serif;
    font-size: 2.5rem;
    font-weight: 900;
    color: var(--electric-yellow);
    text-transform: uppercase;
    letter-spacing: 0.2em;
    margin-bottom: 1.5rem;
    text-shadow: 0 0 30px rgba(244, 255, 48, 0.8);
    animation: glitchText 2s infinite;
  }

  .stellar-rift__secret-message {
    color: var(--chrome-silver);
    font-family: 'PP Mori', sans-serif;
    font-size: 1.25rem;
    line-height: 1.7;
    margin-bottom: 2rem;
  }

  .stellar-rift__secret-link {
    display: inline-block;
    padding: 1rem 2rem;
    background: var(--electric-yellow);
    color: var(--void-black);
    font-family: 'Orbitron', sans-serif;
    font-weight: 700;
    text-decoration: none;
    border-radius: 8px;
    text-transform: uppercase;
    letter-spacing: 2px;
    transition: all 0.3s ease;
  }

  .stellar-rift__secret-link:hover {
    background: var(--radioactive-green);
    box-shadow: 0 0 40px var(--radioactive-green);
  }

  .stellar-rift__secret-close {
    margin-top: 1.5rem;
    color: var(--chrome-silver);
    cursor: pointer;
    font-family: 'PP Mori', sans-serif;
    opacity: 0.7;
    transition: opacity 0.3s ease;
  }

  .stellar-rift__secret-close:hover {
    opacity: 1;
  }

  /* MOBILE RESPONSIVE */
  @media (max-width: 768px) {
    .stellar-rift {
      padding: 4rem 1rem;
    }

    .stellar-rift__portal {
      padding: 2rem 1.5rem;
    }

    .stellar-rift__input-group {
      flex-direction: column;
    }

    .stellar-rift__benefits {
      grid-template-columns: 1fr;
    }

    .stellar-rift__secret-content {
      margin: 1rem;
      padding: 2rem;
    }
  }
</style>

