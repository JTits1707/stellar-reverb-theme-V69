  ═══════════════════════════════════════════════════════════
  STELLAR REVERB - FOOTER SECTION
  ═══════════════════════════════════════════════════════════
  
  Purpose: 3-column footer with capsule links, info, and social
  Structure:
    Column 1: Capsules (dynamic list from metaobjects)
    Column 2: Info (FAQ, Contact, Shipping, etc.)
    Column 3: Connect (Social media links)
  
  Features:
    - Dynamic capsule list
    - Optional Signal Seeker badge
    - Social media icons
    - Copyright info
{% liquid
  # Fetch all published capsules from metaobjects
  assign all_capsules = shop.metaobjects.capsule_archive.values | sort: 'capsule_number'
  
  # Footer settings
  assign show_signal_badge = section.settings.show_signal_badge | default: true
  assign copyright_text = section.settings.copyright_text | default: '© 2025 Stellar Reverb. All transmissions encrypted.'
%}

<footer 
  class="stellar-footer" 
  data-section-id="{{ section.id }}"
  role="contentinfo"
>
  
  <div class="container">
    
    {%- comment -%} Main Footer Grid {%- endcomment -%}
    <div class="footer-grid">
      
      {%- comment -%} COLUMN 1: CAPSULES {%- endcomment -%}
      <div class="footer-column footer-column--capsules">
        <h3 class="footer-heading">CAPSULES</h3>
        
        <ul class="footer-list">
          {% if all_capsules.size > 0 %}
            {% for capsule in all_capsules limit: 10 %}
              <li class="footer-list-item">
                <a 
                  href="{{ capsule.page_url.value }}" 
                  class="footer-link"
                  data-capsule="{{ capsule.capsule_number.value }}"
                >
                  <span class="capsule-number">{{ capsule.capsule_number.value }}</span>
                  <span class="capsule-title">{{ capsule.title.value }}</span>
                </a>
              </li>
            {% endfor %}
            
            {% if all_capsules.size > 10 %}
              <li class="footer-list-item">
                <a href="/pages/archives" class="footer-link footer-link--all">
                  View All Capsules →
                </a>
              </li>
            {% endif %}
          {% else %}
            {%- comment -%} Fallback if no metaobjects {%- endcomment -%}
            <li class="footer-list-item">
              <a href="/pages/capsule-001" class="footer-link">
                <span class="capsule-number">001</span>
                <span class="capsule-title">On The Event Horizon</span>
              </a>
            </li>
            <li class="footer-list-item">
              <a href="/pages/capsule-002" class="footer-link">
                <span class="capsule-number">002</span>
                <span class="capsule-title">Past The Singularity</span>
              </a>
            </li>
            <li class="footer-list-item">
              <a href="/pages/archives" class="footer-link footer-link--all">
                View All Capsules →
              </a>
            </li>
          {% endif %}
        </ul>
      </div>
      
      {%- comment -%} COLUMN 2: INFO {%- endcomment -%}
      <div class="footer-column footer-column--info">
        <h3 class="footer-heading">INFO</h3>
        
        <ul class="footer-list">
          {% for block in section.blocks %}
            {% if block.type == 'info_link' %}
              <li class="footer-list-item">
                <a 
                  href="{{ block.settings.link_url }}" 
                  class="footer-link"
                  {{ block.shopify_attributes }}
                >
                  {{ block.settings.link_text }}
                </a>
              </li>
            {% endif %}
          {% endfor %}
        </ul>
      </div>
      
      {%- comment -%} COLUMN 3: CONNECT {%- endcomment -%}
      <div class="footer-column footer-column--connect">
        <h3 class="footer-heading">CONNECT</h3>
        
        <ul class="footer-list footer-social-list">
          {% for block in section.blocks %}
            {% if block.type == 'social_link' %}
              <li class="footer-list-item">
                <a 
                  href="{{ block.settings.social_url }}" 
                  class="footer-link footer-social-link"
                  target="_blank"
                  rel="noopener noreferrer"
                  aria-label="{{ block.settings.platform }}"
                  {{ block.shopify_attributes }}
                >
                  {%- comment -%} Social Icons {%- endcomment -%}
                  <span class="social-icon">
                    {% case block.settings.platform %}
