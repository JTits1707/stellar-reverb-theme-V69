                      {% else %}
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                          <circle cx="12" cy="12" r="10" stroke-width="2"/>
                          <path d="M12 8v8M8 12h8" stroke-width="2" stroke-linecap="round"/>
                        </svg>
                    {% endcase %}
                  </span>
                  <span class="social-label">{{ block.settings.platform | capitalize }}</span>
                </a>
              </li>
            {% endif %}
          {% endfor %}
        </ul>
      </div>
      
    </div>
    
    {%- comment -%} Footer Bottom {%- endcomment -%}
    <div class="footer-bottom">
      
      {%- comment -%} Optional Signal Seeker Badge {%- endcomment -%}
      {% if show_signal_badge %}
        <div class="signal-seeker-badge">
          <svg class="badge-icon" width="40" height="40" viewBox="0 0 100 100" fill="none">
            <path d="M50 15 L80 75 L20 75 Z" stroke="url(#footer-gradient)" stroke-width="2" fill="none"/>
            <circle cx="50" cy="50" r="15" stroke="rgba(0,240,255,0.4)" stroke-width="1.5" fill="none"/>
            <defs>
              <linearGradient id="footer-gradient" x1="0%" y1="0%" x2="100%" y2="100%">
                <stop offset="0%" style="stop-color:#00f0ff;stop-opacity:0.8" />
                <stop offset="100%" style="stop-color:#ff00ff;stop-opacity:0.8" />
              </linearGradient>
            </defs>
          </svg>
        </div>
      {% endif %}
      
      {%- comment -%} Copyright {%- endcomment -%}
      <p class="copyright">{{ copyright_text }}</p>
      
      {%- comment -%} Payment Icons (optional) {%- endcomment -%}
      {% if section.settings.show_payment_icons %}
        <div class="payment-icons">
          {{ shop.enabled_payment_types | payment_type_svg_tag }}
        </div>
      {% endif %}
      
    </div>
    
  </div>
  
  {%- comment -%} Background Scanlines {%- endcomment -%}
  <div class="footer-scanlines" aria-hidden="true"></div>
  
</footer>

<style>
  .stellar-footer {
    position: relative;
    padding: 6rem 0 3rem;
    background: linear-gradient(180deg, #0a0a15 0%, #000000 100%);
    border-top: 1px solid rgba(0, 240, 255, 0.2);
    color: rgba(255, 255, 255, 0.8);
    overflow: hidden;
  }
  
  .container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;
  }
  
  /* ────────────────────────────────────────────────────────
     FOOTER GRID (3 Columns)
     ──────────────────────────────────────────────────────── */
  
  .footer-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 4rem;
    margin-bottom: 4rem;
  }
  
  .footer-column {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }
  
  /* ────────────────────────────────────────────────────────
     COLUMN HEADINGS
     ──────────────────────────────────────────────────────── */
  
  .footer-heading {
    font-size: 1.125rem;
    font-weight: 800;
    letter-spacing: 0.1em;
    color: #00f0ff;
    margin: 0;
    text-transform: uppercase;
    padding-bottom: 1rem;
    border-bottom: 2px solid rgba(0, 240, 255, 0.2);
  }
  
  /* ────────────────────────────────────────────────────────
     FOOTER LISTS
     ──────────────────────────────────────────────────────── */
  
  .footer-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }
  
  .footer-list-item {
    line-height: 1.6;
  }
  
  .footer-link {
    display: inline-flex;
    align-items: baseline;
    gap: 0.5rem;
    color: rgba(255, 255, 255, 0.7);
    text-decoration: none;
    font-size: 0.9375rem;
    transition: all 0.3s ease;
    position: relative;
  }
  
  .footer-link::before {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 1px;
    background: #00f0ff;
    transition: width 0.3s ease;
  }
  
  .footer-link:hover {
    color: #00f0ff;
  }
  
  .footer-link:hover::before {
    width: 100%;
  }
  
  /* ────────────────────────────────────────────────────────
     CAPSULE LINKS (Column 1)
     ──────────────────────────────────────────────────────── */
  
  .capsule-number {
    font-family: 'Courier New', monospace;
    font-weight: 700;
    color: rgba(0, 240, 255, 0.6);
    min-width: 2.5rem;
  }
  
  .capsule-title {
    flex: 1;
  }
  
  .footer-link--all {
    margin-top: 0.5rem;
    font-weight: 600;
    color: #00f0ff;
  }
  
  /* ────────────────────────────────────────────────────────
     SOCIAL LINKS (Column 3)
     ──────────────────────────────────────────────────────── */
  
  .footer-social-link {
    display: flex;
    align-items: center;
    gap: 1rem;
  }
  
  .social-icon {
    width: 24px;
    height: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: rgba(0, 240, 255, 0.7);
    transition: all 0.3s ease;
  }
  
  .social-icon svg {
    width: 100%;
    height: 100%;
  }
  
  .footer-social-link:hover .social-icon {
    color: #00f0ff;
    transform: scale(1.1) rotate(5deg);
  }
  
  .social-label {
    font-size: 0.9375rem;
  }
  
  /* ────────────────────────────────────────────────────────
     FOOTER BOTTOM
     ──────────────────────────────────────────────────────── */
  
  .footer-bottom {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 2rem;
    padding-top: 3rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    text-align: center;
    flex-wrap: wrap;
  }
  
  .signal-seeker-badge {
    opacity: 0.3;
    transition: opacity 0.3s ease;
  }
  
  .stellar-footer:hover .signal-seeker-badge {
    opacity: 0.6;
  }
  
  .badge-icon {
    width: 40px;
    height: 40px;
    filter: drop-shadow(0 0 10px rgba(0, 240, 255, 0.3));
  }
  
  .copyright {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.5);
    margin: 0;
    font-family: 'Courier New', monospace;
  }
  
  .payment-icons {
    display: flex;
    gap: 0.5rem;
    opacity: 0.5;
  }
  
  .payment-icons svg {
    height: 24px;
    width: auto;
  }
  
  /* ────────────────────────────────────────────────────────
     SCANLINES EFFECT
     ──────────────────────────────────────────────────────── */
  
  .footer-scanlines {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: repeating-linear-gradient(
      0deg,
      rgba(0, 0, 0, 0.1) 0px,
      transparent 1px,
      transparent 2px,
      rgba(0, 0, 0, 0.1) 3px
    );
    pointer-events: none;
    opacity: 0.3;
  }
  
  /* ────────────────────────────────────────────────────────
     RESPONSIVE
     ──────────────────────────────────────────────────────── */
  
  @media (max-width: 1024px) {
    .footer-grid {
      gap: 3rem;
    }
  }
  
  @media (max-width: 768px) {
    .stellar-footer {
      padding: 4rem 0 2rem;
    }
    
    .footer-grid {
      grid-template-columns: 1fr;
      gap: 3rem;
    }
    
    .footer-bottom {
      flex-direction: column;
      gap: 1.5rem;
    }
  }
  
  /* ────────────────────────────────────────────────────────
     ACCESSIBILITY
     ──────────────────────────────────────────────────────── */
  
  .footer-link:focus {
    outline: 2px solid #00f0ff;
    outline-offset: 2px;
  }
  
  @media (prefers-reduced-motion: reduce) {
    .footer-link,
    .social-icon,
    .signal-seeker-badge {
      transition: none;
    }
  }
</style>

