{% endcomment %}

<section class="hero-cosmic" id="hero-{{ section.id }}">
  
  {%- comment -%} Animated Background Layer {%- endcomment -%}
  <div class="hero-backdrop">
    <div class="hero-gradient"></div>
    {% if section.settings.show_floating_elements %}
      {% render 'floating-elements' %}
    {% endif %}
  </div>

  {%- comment -%} Hero Content {%- endcomment -%}
  <div class="container">
    <div class="hero-content">

      {%- comment -%} Badge/Eyebrow {%- endcomment -%}
      {% if section.settings.eyebrow_text != blank %}
        <div class="hero-eyebrow">
          {% if section.settings.eyebrow_icon != blank %}
            <span class="eyebrow-icon">{{ section.settings.eyebrow_icon }}</span>
          {% endif %}
          <span class="eyebrow-text">{{ section.settings.eyebrow_text }}</span>
        </div>
      {% endif %}

      {%- comment -%} Main Headline {%- endcomment -%}
      <h1 class="hero-title{% if section.settings.enable_glitch %} glitch-text{% endif %}" 
          {% if section.settings.enable_glitch %}data-text="{{ section.settings.heading }}"{% endif %}>
        {{ section.settings.heading | default: 'Transmissions from the Cosmic Archive' }}
      </h1>

      {%- comment -%} Subheadline {%- endcomment -%}
      {% if section.settings.subheading != blank %}
        <p class="hero-subtitle">
          {{ section.settings.subheading }}
        </p>
      {% endif %}

      {%- comment -%} CTA Buttons {%- endcomment -%}
      <div class="hero-actions">
        
        {% if section.settings.primary_button_text != blank %}
          <a 
            href="{{ section.settings.primary_button_url }}" 
            class="btn btn-primary hero-btn-primary"
          >
            {{ section.settings.primary_button_text }}
          </a>
        {% endif %}

        {% if section.settings.secondary_button_text != blank %}
          <a 
            href="{{ section.settings.secondary_button_url }}" 
            class="btn btn-secondary hero-btn-secondary"
          >
            {{ section.settings.secondary_button_text }}
          </a>
        {% endif %}

      </div>

      {%- comment -%} Optional Features List {%- endcomment -%}
      {% if section.settings.show_features %}
        <div class="hero-features">
          {% for i in (1..3) %}
            {% assign feature_text = 'feature_' | append: i | append: '_text' %}
            {% if section.settings[feature_text] != blank %}
              <div class="feature-item">
                <svg width="20" height="20" viewBox="0 0 20 20" fill="none" stroke="currentColor">
                  <path d="M4 10l4 4 8-8" stroke-width="2" stroke-linecap="round"/>
                </svg>
                <span>{{ section.settings[feature_text] }}</span>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      {% endif %}

    </div>
  </div>

  {%- comment -%} Scroll Indicator {%- endcomment -%}
  {% if section.settings.show_scroll_indicator %}
    <div class="scroll-indicator">
      <div class="scroll-icon">
        <svg width="24" height="40" viewBox="0 0 24 40" fill="none" stroke="currentColor">
          <rect x="8" y="1" width="8" height="14" rx="4" stroke-width="2"/>
          <circle cx="12" cy="5" r="1.5" fill="currentColor">
            <animate attributeName="cy" from="5" to="11" dur="1.5s" repeatCount="indefinite"/>
          </circle>
        </svg>
      </div>
      <span class="scroll-text">{{ section.settings.scroll_text | default: 'Scroll to Explore' }}</span>
    </div>
  {% endif %}

</section>

<style>
  #hero-{{ section.id }} {
    position: relative;
    min-height: {{ section.settings.section_height }}vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--spacing-xl, 4rem) 0;
    overflow: hidden;
  }

  /* Backdrop */
  .hero-backdrop {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .hero-gradient {
    position: absolute;
    inset: 0;
    background: 
      radial-gradient(circle at 20% 50%, {{ section.settings.gradient_color_1 | default: 'rgba(108, 36, 179, 0.4)' }} 0%, transparent 50%),
      radial-gradient(circle at 80% 50%, {{ section.settings.gradient_color_2 | default: 'rgba(40, 168, 214, 0.4)' }} 0%, transparent 50%);
    animation: gradient-pulse 8s ease-in-out infinite;
  }

  /* Hero Content */
  .hero-content {
    position: relative;
    z-index: 1;
    max-width: 900px;
    margin: 0 auto;
    text-align: {{ section.settings.text_alignment }};
  }

  /* Eyebrow */
  .hero-eyebrow {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    border-radius: var(--border-radius-pill, 999px);
    background: {{ section.settings.eyebrow_background | default: 'linear-gradient(135deg, var(--radioactive-green), var(--cyan-blue))' }};
    color: {{ section.settings.eyebrow_color | default: 'var(--void-black)' }};
    font-family: var(--font-title, "Orbitron", sans-serif);
    font-size: 0.85rem;
    font-weight: 700;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    margin-bottom: var(--spacing-md, 1.5rem);
    box-shadow: 0 0 20px rgba(0, 240, 172, 0.5);
    animation: badge-glow 2s ease-in-out infinite;
  }

  .eyebrow-icon {
    font-size: 1.2rem;
  }

  /* Title */
  .hero-title {
    font-family: var(--font-title, "Orbitron", sans-serif);
    font-size: clamp(2.5rem, {{ section.settings.title_size_mobile }}vw, {{ section.settings.title_size_desktop }}rem);
    font-weight: 900;
    line-height: 1.1;
    letter-spacing: {{ section.settings.title_letter_spacing }}em;
    text-transform: uppercase;
    margin-bottom: var(--spacing-md, 1.5rem);
    background: {{ section.settings.title_gradient | default: 'linear-gradient(135deg, var(--neon-magenta), var(--cyan-blue))' }};
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  /* Subtitle */
  .hero-subtitle {
    font-family: var(--font-body, "Montserrat", sans-serif);
    font-size: clamp(1rem, 2.5vw, 1.5rem);
    line-height: 1.6;
    color: {{ section.settings.subtitle_color | default: 'rgba(255, 255, 255, 0.8)' }};
    margin-bottom: var(--spacing-lg, 2.5rem);
    max-width: 700px;
    {% if section.settings.text_alignment == 'center' %}
    margin-left: auto;
    margin-right: auto;
    {% endif %}
  }

  /* Actions */
  .hero-actions {
    display: flex;
    gap: var(--spacing-sm, 1rem);
    flex-wrap: wrap;
    margin-bottom: var(--spacing-lg, 2.5rem);
    {% if section.settings.text_alignment == 'center' %}
    justify-content: center;
    {% elsif section.settings.text_alignment == 'right' %}
    justify-content: flex-end;
    {% endif %}
  }

  .hero-btn-primary,
  .hero-btn-secondary {
    padding: 1rem 2rem;
    font-size: 0.9rem;
  }

  /* Features List */
  .hero-features {
    display: flex;
    gap: var(--spacing-md, 1.5rem);
    flex-wrap: wrap;
    padding-top: var(--spacing-md, 1.5rem);
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    {% if section.settings.text_alignment == 'center' %}
    justify-content: center;
    {% elsif section.settings.text_alignment == 'right' %}
    justify-content: flex-end;
    {% endif %}
  }

  .feature-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-family: var(--font-body, "Montserrat", sans-serif);
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.8);
  }

  .feature-item svg {
    color: var(--radioactive-green, #00F0AC);
    flex-shrink: 0;
  }

  /* Scroll Indicator */
  .scroll-indicator {
    position: absolute;
    bottom: var(--spacing-lg, 2.5rem);
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    animation: bounce 2s ease-in-out infinite;
  }

  .scroll-icon {
    color: var(--cyan-blue, #28A8D6);
  }

  .scroll-text {
    font-family: var(--font-title, "Orbitron", sans-serif);
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    color: rgba(255, 255, 255, 0.7);
  }

  /* Animations */
  @keyframes gradient-pulse {
    0%, 100% { transform: scale(1); opacity: 1; }
    50% { transform: scale(1.05); opacity: 0.9; }
  }

  @keyframes badge-glow {
    0%, 100% { box-shadow: 0 0 20px rgba(0, 240, 172, 0.5); }
    50% { box-shadow: 0 0 30px rgba(40, 168, 214, 0.8); }
  }

  @keyframes bounce {
    0%, 100% { transform: translateX(-50%) translateY(0); }
    50% { transform: translateX(-50%) translateY(-10px); }
  }

  /* Responsive */
  @media (max-width: 768px) {
    #hero-{{ section.id }} {
      min-height: 70vh;
      padding: var(--spacing-lg, 2.5rem) 0;
    }

    .hero-actions {
      flex-direction: column;
      width: 100%;
    }

    .hero-btn-primary,
    .hero-btn-secondary {
      width: 100%;
      justify-content: center;
    }

    .hero-features {
      flex-direction: column;
      align-items: flex-start;
    }

    .scroll-indicator {
      display: none;
    }
  }

  /* Reduced Motion */
  @media (prefers-reduced-motion: reduce) {
    .hero-gradient,
    .hero-eyebrow,
    .scroll-indicator {
      animation: none !important;
    }
  }
</style>

