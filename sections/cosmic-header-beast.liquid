/* 1. MacOS Window Bar — Floating Above Everything */
.header__inner::before {
  content: "";
  position: absolute;
  top: 12px;
  left: 50%;
  transform: translateX(-50%);
  width: 160px;
  height: 18px;
  background: rgba(30,30,30,0.9);
  border-radius: 9px;
  backdrop-filter: blur(12px);
  z-index: 9999;
  box-shadow: 0 4px 20px rgba(0,0,0,0.6);
}
.header__inner::after {
  content: "● ● ●";
  position: absolute;
  top: 12px;
  left: 50%;
  transform: translateX(-50%);
  font-size: 10px;
  letter-spacing: 12px;
  color: #555;
  z-index: 9999;
  pointer-events: none;
}

/* 2. Glitch Logo on Hover */
.header__heading-link img,
.header__heading-link svg {
  transition: all 0.4s ease;
  filter: drop-shadow(0 0 10px var(--cyan-blue));
}
.header__heading-link:hover img,
.header__heading-link:hover svg {
  animation: logoGlitch 0.6s ease-in-out;
  filter: drop-shadow(0 0 30px var(--neon-magenta));
}
@keyframes logoGlitch {
  0%,100% { transform: translate(0); }
  20% { transform: translate(-3px, 3px); }
  40% { transform: translate(3px, -3px); }
  60% { transform: translate(-2px, -2px); }
  80% { transform: translate(2px, 2px); }
}

/* 3. Announcement Bar — Pulsing Neon Edge */
.announcement-bar {
  background: linear-gradient(90deg, 
    transparent 0%, 
    rgba(225,60,250,0.3) 30%, 
    rgba(40,168,214,0.3) 70%, 
    transparent 100%);
  border-bottom: 1px solid transparent;
  animation: announcePulse 4s ease-in-out infinite;
  backdrop-filter: blur(8px);
}
@keyframes announcePulse {
  0%,100% { box-shadow: 0 0 10px rgba(225,60,250,0.3); }
  }
  50% { box-shadow: 0 0 30px rgba(40,168,214,0.6); }
}

/* 4. Menu Items — Hover Glitch + Scanline Trail */
.header__menu-item {
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
}
.header__menu-item::after {
  content: '';
  position: absolute;
  top: 0; left: -100%;
  width: 100%; height: 100%;
  background: linear-gradient(90deg, transparent, rgba(244,255,48,0.2), transparent);
  transition: none;
}
.header__menu-item:hover::after {
  animation: scanlineTrail 0.8s ease-out forwards;
}
.header__menu-item:hover span {
  color: var(--electric-yellow) !important;
  text-shadow: 0 0 15px currentColor;
}
@keyframes scanlineTrail {
  0% { left: -100%; }
  100% { left: 100%; }
}

/* 5. Cart Icon — Radioactive Pulse */
.header__icon--cart {
  animation: cartPulse 3s ease-in-out infinite;
}
@keyframes cartPulse {
  0%,100% { filter: drop-shadow(0 0 10px var(--radioactive-green)); }
  50% { filter: drop-shadow(0 0 25px var(--radioactive-green)); transform: scale(1.1); }
}

/* 6. Mobile Menu Button — Neon Ring */
.header__menu-toggle {
  position: relative;
}
.header__menu-toggle::before {
  content: '';
  position: absolute;
  inset: -8px;
  border: 2px solid transparent;
  border-radius: 50%;
  background: conic-gradient(var(--neon-magenta), var(--cyan-blue), var(--neon-magenta));
  opacity: 0;
  transition: opacity 0.3s;
}
.header__menu-toggle:hover::before {
  opacity: 0.6;
  animation: rotate 3s linear infinite;
}

/* 7. Subtle CRT Scanlines Across Entire Header */
.header {
  position: relative;
  overflow: hidden;
}
.header::before {
  content: '';
  position: absolute;
  top: 0; left: 0; right: 0; bottom: 0;
  background: repeating-linear-gradient(0deg, transparent, transparent 2px, rgba(40,168,214,0.03) 2px, transparent 4px);
  pointer-events: none;
  z-index: 1;
  animation: crtDrift 8s linear infinite;
}
@keyframes crtDrift { to { transform: translateY(4px); } }

