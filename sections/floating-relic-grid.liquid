{% comment %}
  =====================================================
  FLOATING RELIC GRID (Shopify 2.0)
  =====================================================
  
  Features:
  - Product grid with soft hover motion
  - Neon glow on hover
  - Pulls from specified collection
  - Mystical, calm presentation
{% endcomment %}

{%- liquid
  assign grid_title = section.settings.grid_title | default: 'DRIFTING RELICS'
  assign collection_handle = section.settings.collection_handle | default: 'floating-archive'
  assign grid_columns = section.settings.grid_columns | default: 3
  assign enable_hover_glow = section.settings.enable_hover_glow | default: true
  
  assign collection = collections[collection_handle]
-%}

<section class="floating-relic-grid" data-section-id="{{ section.id }}">
  <div class="grid-container">
    <h2 class="grid-title">{{ grid_title }}</h2>
    
    {% if collection and collection.products.size > 0 %}
      <div class="relic-grid" data-columns="{{ grid_columns }}" data-hover-glow="{{ enable_hover_glow }}">
        {% for product in collection.products %}
          <div class="relic-item">
            <a href="{{ product.url }}" class="relic-link">
              <div class="relic-image-wrapper">
                {% if product.featured_image %}
                  <img 
                    src="{{ product.featured_image | image_url: width: 600 }}"
                    srcset="{{ product.featured_image | image_url: width: 300 }} 300w,
                            {{ product.featured_image | image_url: width: 600 }} 600w,
                            {{ product.featured_image | image_url: width: 900 }} 900w"
                    sizes="(max-width: 768px) 100vw, {{ 100 | divided_by: grid_columns }}vw"
                    alt="{{ product.featured_image.alt | escape }}"
                    loading="lazy"
                    class="relic-image"
                  >
                {% else %}
                  <div class="relic-placeholder"></div>
                {% endif %}
                
                <div class="relic-overlay"></div>
              </div>
              
              <div class="relic-info">
                <h3 class="relic-name">{{ product.title }}</h3>
                <p class="relic-price">{{ product.price | money }}</p>
                
                {% if product.metafields.floating_archive.relic_code %}
                  <p class="relic-code">{{ product.metafields.floating_archive.relic_code }}</p>
                {% endif %}
              </div>
            </a>
          </div>
        {% endfor %}
      </div>
    {% else %}
      <div class="grid-empty">
        <p class="empty-message">No relics currently drifting in this sector.</p>
        <p class="empty-hint">Collection handle: <code>{{ collection_handle }}</code></p>
      </div>
    {% endif %}
  </div>
</section>

<style>
  .floating-relic-grid {
    position: relative;
    padding: 6rem 2rem;
    z-index: 1;
  }
  
  .grid-container {
    max-width: 1400px;
    margin: 0 auto;
  }
  
  .grid-title {
    font-family: 'Orbitron', monospace;
    font-size: clamp(1.8rem, 4vw, 2.5rem);
    font-weight: 700;
    color: rgba(40, 168, 214, 0.9);
    text-shadow: 0 0 20px rgba(40, 168, 214, 0.5);
    letter-spacing: 3px;
    text-align: center;
    margin-bottom: 4rem;
  }
  
  .relic-grid {
    display: grid;
    gap: 3rem;
    margin-bottom: 4rem;
  }
  
  .relic-grid[data-columns="2"] {
    grid-template-columns: repeat(auto-fill, minmax(400px, 1fr));
  }
  
  .relic-grid[data-columns="3"] {
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
  }
  
  .relic-grid[data-columns="4"] {
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
  }
  
  .relic-item {
    opacity: 0;
    animation: relicFadeIn 0.6s ease-out forwards;
  }
  
  .relic-item:nth-child(1) { animation-delay: 0.1s; }
  .relic-item:nth-child(2) { animation-delay: 0.2s; }
  .relic-item:nth-child(3) { animation-delay: 0.3s; }
  .relic-item:nth-child(4) { animation-delay: 0.4s; }
  .relic-item:nth-child(5) { animation-delay: 0.5s; }
  .relic-item:nth-child(6) { animation-delay: 0.6s; }
  .relic-item:nth-child(n+7) { animation-delay: 0.7s; }
  
  @keyframes relicFadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .relic-link {
    display: block;
    text-decoration: none;
    color: inherit;
  }
  
  .relic-image-wrapper {
    position: relative;
    aspect-ratio: 1 / 1;
    overflow: hidden;
    border-radius: 4px;
    border: 1px solid rgba(40, 168, 214, 0.2);
    background: rgba(0, 0, 0, 0.5);
    margin-bottom: 1.5rem;
    transition: all 0.4s ease;
  }
  
  .relic-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s ease;
  }
  
  .relic-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, 
      rgba(40, 168, 214, 0) 0%, 
      rgba(40, 168, 214, 0.1) 50%, 
      rgba(0, 240, 172, 0.1) 100%
    );
    opacity: 0;
    transition: opacity 0.4s ease;
  }
  
  .relic-placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, rgba(40, 168, 214, 0.1), rgba(225, 60, 250, 0.1));
  }
  
  /* Hover Effects */
  .relic-item:hover .relic-image-wrapper {
    border-color: rgba(40, 168, 214, 0.6);
    transform: translateY(-5px);
  }
  
  .relic-grid[data-hover-glow="true"] .relic-item:hover .relic-image-wrapper {
    box-shadow: 0 10px 40px rgba(40, 168, 214, 0.4);
  }
  
  .relic-item:hover .relic-image {
    transform: scale(1.05);
  }
  
  .relic-item:hover .relic-overlay {
    opacity: 1;
  }
  
  .relic-info {
    text-align: center;
  }
  
  .relic-name {
    font-family: 'PP Mori', sans-serif;
    font-size: 1.1rem;
    font-weight: 600;
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 0.5rem;
    transition: color 0.3s ease;
  }
  
  .relic-item:hover .relic-name {
    color: rgba(40, 168, 214, 0.9);
  }
  
  .relic-price {
    font-family: 'PP Neuemachina', 'Courier New', monospace;
    font-size: 0.95rem;
    color: rgba(0, 240, 172, 0.8);
    margin-bottom: 0.5rem;
  }
  
  .relic-code {
    font-family: 'PP Neuemachina', 'Courier New', monospace;
    font-size: 0.75rem;
    color: rgba(128, 128, 128, 0.7);
    text-transform: uppercase;
    letter-spacing: 1px;
  }
  
  /* Empty State */
  .grid-empty {
    text-align: center;
    padding: 4rem 2rem;
  }
  
  .empty-message {
    font-family: 'PP Mori', sans-serif;
    font-size: 1.2rem;
    color: rgba(192, 192, 192, 0.7);
    margin-bottom: 1rem;
  }
  
  .empty-hint {
    font-family: 'PP Neuemachina', 'Courier New', monospace;
    font-size: 0.85rem;
    color: rgba(128, 128, 128, 0.6);
  }
  
  .empty-hint code {
    color: rgba(0, 240, 172, 0.7);
    background: rgba(0, 0, 0, 0.5);
    padding: 0.2rem 0.5rem;
    border-radius: 3px;
  }
  
  /* Mobile */
  @media (max-width: 768px) {
    .floating-relic-grid {
      padding: 4rem 1.5rem;
    }
    
    .relic-grid {
      grid-template-columns: 1fr !important;
      gap: 2rem;
    }
    
    .grid-title {
      margin-bottom: 3rem;
    }
  }
</style>

{% schema %}
{
  "name": "Floating Relic Grid",
  "class": "floating-relic-grid-section",
  "settings": [
    {
      "type": "text",
      "id": "grid_title",
      "label": "Grid Title",
      "default": "DRIFTING RELICS"
    },
    {
      "type": "text",
      "id": "collection_handle",
      "label": "Collection Handle",
      "default": "floating-archive",
      "info": "The handle of the collection to display"
    },
    {
      "type": "range",
      "id": "grid_columns",
      "min": 2,
      "max": 4,
      "step": 1,
      "label": "Grid Columns (Desktop)",
      "default": 3
    },
    {
      "type": "checkbox",
      "id": "enable_hover_glow",
      "label": "Enable Hover Glow",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Floating Relic Grid"
    }
  ]
}
{% endschema %}
