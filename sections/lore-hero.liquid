{% endcomment %}

{% assign hero_image = section.settings.hero_image | default: 'cosmic-hero-bg.jpg' %}
{% assign hero_title = section.settings.hero_title | default: 'UNIVERSAL LORE: SIGNALS FROM THE VOID' %}
{% assign hero_subtitle = section.settings.hero_subtitle | default: 'Distort reality, wear the echo.' %}

<section
  class="hero lore-hero section-{{ section.id }}"
  data-section-id="{{ section.id }}"
  data-section-type="lore-hero"
  style="background-image: url('{{ hero_image | asset_url }}');"
>
  <div class="hero-overlay"></div>

  <div class="hero-content container">
    <p class="hero-kicker orbitron text-xs tracking-widest mb-2">
      âœ¶ UNIVERSAL INDEX Â· STELLAR REVERB LORE SYSTEM
    </p>

    <h1 class="hero-title orbitron animate-title-pulse">
      {{ hero_title }}
    </h1>

    <p class="hero-subtitle animate-fade-in-delay">
      {{ hero_subtitle }}
    </p>

    <!-- Meta chips â€“ echoing the Shop All vibe -->
    <div class="hero-meta flex flex-wrap gap-2 mt-4 text-xs">
      <span class="chip chip-soft">
        ðŸ›° Live transmissions from every capsule
      </span>
      <span class="chip chip-soft">
        ðŸ“¼ Analog mysticism Â· digital glitch
      </span>
      <span class="chip chip-soft">
        âš¡ Interactive lore Â· sound-reactive visuals
      </span>
    </div>

    <button
      class="cta-primary animate-bounce-in mt-6"
      id="enterVoid"
      aria-label="Enter the universal lore"
    >
      {{ section.settings.cta_text | default: 'DECODE THE SIGNAL' }}
    </button>
  </div>

  <!-- CSS Particles Background for JS engine -->
  <div class="particles" id="particles" aria-hidden="true"></div>

  <!-- Ambient Audio Toggle (optional) -->
  {% if section.settings.enable_ambient_audio %}
    <button
      class="sound-toggle"
      id="soundToggle"
      aria-label="Toggle ambient audio"
    >
      <svg class="sound-icon" width="24" height="24" viewBox="0 0 24 24" fill="none">
        <path d="M3 9v6h4l5 5V4L7 9H3z" stroke="currentColor" stroke-width="2"/>
      </svg>
    </button>
  {% endif %}
</section>

{% schema %}
{
  "name": "Lore Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Background Image"
    },
    {
      "type": "text",
      "id": "hero_title",
      "label": "Hero Title",
      "default": "UNIVERSAL LORE: SIGNALS FROM THE VOID"
    },
    {
      "type": "text",
      "id": "hero_subtitle",
      "label": "Hero Subtitle",
      "default": "Distort reality, wear the echo."
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Button Text",
      "default": "DECODE THE SIGNAL"
    },
    {
      "type": "checkbox",
      "id": "enable_ambient_audio",
      "label": "Enable Ambient Audio",
      "default": false
    }
  ],
  "presets": [
    {
      "name": "Lore Hero",
      "category": "Stellar Reverb"
    }
  ]
}
{% endschema %}