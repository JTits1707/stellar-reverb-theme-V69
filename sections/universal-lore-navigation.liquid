<nav class="lore-nav" id="loreNav" role="navigation" aria-label="Main navigation">
  <div class="lore-nav__container">
    <a href="{{ routes.root_url }}" class="lore-nav__logo" aria-label="{{ shop.name }} Home">
      <div class="brand-icon"></div>
      <span class="orbitron">{{ section.settings.brand_name | default: shop.name | upcase }}</span>
    </a>
    
    <ul class="lore-nav__menu" id="loreNavMenu">
      {% for block in section.blocks %}
        <li>
          <a href="{{ block.settings.link }}" class="lore-nav__link orbitron" data-section="{{ block.settings.section_id }}">
            {{ block.settings.label }}
          </a>
        </li>
      {% endfor %}
    </ul>
    
    <button class="lore-nav__toggle" id="mobileNavToggle" aria-label="Toggle navigation" aria-expanded="false">
      <span></span>
      <span></span>
      <span></span>
    </button>
  </div>
</nav>

<style>
  .lore-nav {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    background: rgba(10, 10, 10, 0.95);
    backdrop-filter: blur(20px) saturate(180%);
    -webkit-backdrop-filter: blur(20px) saturate(180%);
    border-bottom: 1px solid rgba(225, 60, 250, 0.2);
    padding: 1rem 2rem;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .lore-nav.scrolled {
    background: rgba(10, 10, 10, 0.98);
    border-bottom-color: rgba(225, 60, 250, 0.4);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);
  }
  
  .lore-nav__container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 1400px;
    margin: 0 auto;
  }
  
  .lore-nav__logo {
    display: flex;
    align-items: center;
    gap: 1rem;
    font-size: clamp(1.125rem, 2vw, 1.5rem);
    font-weight: 700;
    color: #E13CFA;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    transition: all 0.3s ease;
  }
  
  .lore-nav__logo:hover {
    color: #28A8D6;
    text-shadow: 0 0 10px currentColor;
  }
  
  .brand-icon {
    width: 48px;
    height: 48px;
    background: linear-gradient(135deg, #E13CFA, #6C24B3);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
    transition: all 0.5s cubic-bezier(0.68, -0.55, 0.265, 1.55);
  }
  
  .brand-icon::before {
    content: '';
    position: absolute;
    inset: 3px;
    background: #0A0A0A;
    border-radius: 9px;
  }
  
  .brand-icon::after {
    content: 'SR';
    position: relative;
    z-index: 1;
    font-family: 'Orbitron', monospace;
    font-weight: 900;
    color: #E13CFA;
    font-size: 1rem;
  }
  
  .lore-nav__logo:hover .brand-icon {
    transform: rotate(5deg) scale(1.05);
    box-shadow: 0 0 20px #E13CFA;
  }
  
  .lore-nav__menu {
    display: flex;
    list-style: none;
    gap: 2rem;
    margin: 0;
    padding: 0;
  }
  
  .lore-nav__link {
    color: #C0C0C0;
    text-decoration: none;
    font-weight: 600;
    font-size: clamp(0.875rem, 1.2vw, 1rem);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    position: relative;
    transition: all 0.3s ease;
  }
  
  .lore-nav__link::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 2px;
    background: linear-gradient(90deg, #E13CFA, #28A8D6);
    transition: width 0.3s ease;
  }
  
  .lore-nav__link:hover,
  .lore-nav__link.active {
    color: #28A8D6;
    text-shadow: 0 0 10px currentColor;
  }
  
  .lore-nav__link:hover::after,
  .lore-nav__link.active::after {
    width: 100%;
  }
  
  .lore-nav__toggle {
    display: none;
    background: none;
    border: none;
    padding: 0.5rem;
    cursor: pointer;
    flex-direction: column;
    gap: 4px;
  }
  
  .lore-nav__toggle span {
    display: block;
    width: 24px;
    height: 2px;
    background: #E13CFA;
    transition: all 0.3s ease;
  }
  
  .lore-nav__toggle[aria-expanded="true"] span:nth-child(1) {
    transform: rotate(45deg) translateY(6px);
  }
  
  .lore-nav__toggle[aria-expanded="true"] span:nth-child(2) {
    opacity: 0;
  }
  
  .lore-nav__toggle[aria-expanded="true"] span:nth-child(3) {
    transform: rotate(-45deg) translateY(-6px);
  }
  
  @media (max-width: 768px) {
    .lore-nav {
      padding: 1rem;
    }
    
    .lore-nav__menu {
      position: fixed;
      top: 72px;
      left: -100%;
      width: 100%;
      height: calc(100vh - 72px);
      background: rgba(10, 10, 10, 0.98);
      backdrop-filter: blur(20px);
      flex-direction: column;
      align-items: center;
      justify-content: flex-start;
      padding-top: 4rem;
      transition: left 0.3s ease;
    }
    
    .lore-nav__menu.active {
      left: 0;
    }
    
    .lore-nav__toggle {
      display: flex;
    }
    
    .brand-icon {
      width: 40px;
      height: 40px;
    }
  }
</style>

<script>
  // Navigation scroll behavior
  const nav = document.getElementById('loreNav');
  window.addEventListener('scroll', () => {
    if (window.scrollY > 50) {
      nav.classList.add('scrolled');
    } else {
      nav.classList.remove('scrolled');
    }
    updateActiveLink();
  });
  
  // Mobile toggle
  const toggle = document.getElementById('mobileNavToggle');
  const menu = document.getElementById('loreNavMenu');
  
  toggle.addEventListener('click', () => {
    const isExpanded = toggle.getAttribute('aria-expanded') === 'true';
    toggle.setAttribute('aria-expanded', !isExpanded);
    menu.classList.toggle('active');
  });
  
  // Active link tracking
  function updateActiveLink() {
    const links = document.querySelectorAll('.lore-nav__link');
    links.forEach(link => {
      const sectionId = link.dataset.section;
      const section = document.getElementById(sectionId);
      if (section) {
        const rect = section.getBoundingClientRect();
        if (rect.top <= 100 && rect.bottom >= 100) {
          link.classList.add('active');
        } else {
          link.classList.remove('active');
        }
      }
    });
  }
</script>

