{% comment %}
  STELLAR REVERB - Live Signal Feed (CORRECTED v2.0)
  Displays real-time "transmissions" from X/Twitter or manual feed
  Works with capsule_archive metaobjects
{% endcomment %}

<section 
  class="stellar-signals" 
  data-section-id="{{ section.id }}"
  data-section-type="stellar-signals"
  style="--signal-color: {{ section.settings.signal_color }};">
  
  <div class="signals-container">
    
    {%- if section.settings.heading != blank -%}
      <header class="signals-header">
        <h2 class="signals-title">
          <span class="glitch-text" data-text="{{ section.settings.heading }}">
            {{ section.settings.heading }}
          </span>
        </h2>
        {%- if section.settings.subtitle != blank -%}
          <p class="signals-subtitle">{{ section.settings.subtitle }}</p>
        {%- endif -%}
      </header>
    {%- endif -%}

    <div class="signals-grid" data-signal-grid>
      
      {%- comment -%} Live Twitter/X Feed Integration {%- endcomment -%}
      {%- if section.settings.enable_twitter_feed -%}
        <div class="signal-card signal-twitter" data-signal-source="twitter">
          <div class="signal-icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
              <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
            </svg>
          </div>
          <div class="signal-content">
            <p class="signal-status">Loading live signals from X...</p>
            <div class="signal-loader">
              <span></span><span></span><span></span>
            </div>
          </div>
        </div>
      {%- endif -%}

      {%- comment -%} Recent Capsules as Signals {%- endcomment -%}
      {%- assign recent_capsules = shop.metaobjects.capsule_archive.values | sort: 'release_date' | reverse -%}
      {%- assign signal_count = 0 -%}
      
      {%- for capsule in recent_capsules limit: section.settings.signal_count -%}
        {%- assign signal_count = signal_count | plus: 1 -%}
        
        <div class="signal-card" 
             data-signal-id="{{ capsule.capsule_number.value }}"
             data-signal-theme="{{ capsule.theme_color.value | default: '#FF006E' }}"
             style="--capsule-theme: {{ capsule.theme_color.value | default: '#FF006E' }};">
          
          <div class="signal-header">
            <span class="signal-number">CAPSULE-{{ capsule.capsule_number.value | upcase }}</span>
            <span class="signal-timestamp" data-timestamp="{{ capsule.release_date.value }}">
              {{ capsule.release_date.value | date: "%b %d, %Y" }}
            </span>
          </div>

          {%- if capsule.featured_image.value -%}
            <div class="signal-visual">
              <img 
                src="{{ capsule.featured_image.value | image_url: width: 400 }}" 
                alt="{{ capsule.title.value }}"
                loading="lazy"
                width="400"
                height="300">
            </div>
          {%- endif -%}

          <div class="signal-body">
            <h3 class="signal-title">{{ capsule.title.value }}</h3>
            {%- if capsule.description.value -%}
              <p class="signal-excerpt">{{ capsule.description.value | strip_html | truncate: 120 }}</p>
            {%- endif -%}
          </div>

          {%- if capsule.page_url.value -%}
            <a href="{{ capsule.page_url.value }}" class="signal-link">
              <span>Decrypt Signal</span>
              <svg width="16" height="16" viewBox="0 0 16 16" fill="none" stroke="currentColor">
                <path d="M1 8h14M9 2l6 6-6 6" stroke-width="2" stroke-linecap="round"/>
              </svg>
            </a>
          {%- endif -%}

          <div class="signal-waves" aria-hidden="true">
            <svg viewBox="0 0 100 20" preserveAspectRatio="none">
              <path d="M0,10 Q25,0 50,10 T100,10" fill="none" stroke="currentColor" stroke-width="0.5" opacity="0.3"/>
            </svg>
          </div>
        </div>
      {%- endfor -%}

      {%- comment -%} Manual Signal Blocks {%- endcomment -%}
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'signal_card' -%}
            <div class="signal-card signal-manual" {{ block.shopify_attributes }}>
              <div class="signal-header">
                <span class="signal-label">{{ block.settings.label }}</span>
                <span class="signal-timestamp">{{ block.settings.timestamp }}</span>
              </div>
              <div class="signal-body">
                {%- if block.settings.title != blank -%}
                  <h3 class="signal-title">{{ block.settings.title }}</h3>
                {%- endif -%}
                {%- if block.settings.message != blank -%}
                  <p class="signal-message">{{ block.settings.message }}</p>
                {%- endif -%}
              </div>
              {%- if block.settings.link_url != blank -%}
                <a href="{{ block.settings.link_url }}" class="signal-link">
                  <span>{{ block.settings.link_text | default: "View Signal" }}</span>
                  <svg width="16" height="16" viewBox="0 0 16 16" fill="none" stroke="currentColor">
                    <path d="M1 8h14M9 2l6 6-6 6" stroke-width="2" stroke-linecap="round"/>
                  </svg>
                </a>
              {%- endif -%}
            </div>
        {%- endcase -%}
      {%- endfor -%}

      {%- comment -%} Empty State {%- endcomment -%}
      {%- if signal_count == 0 and section.blocks.size == 0 -%}
        <div class="signals-empty">
          <div class="empty-icon">ðŸ“¡</div>
          <p class="empty-text">No signals detected... monitoring the void.</p>
        </div>
      {%- endif -%}

    </div>

    {%- if section.settings.show_archive_link and section.settings.archive_url != blank -%}
      <footer class="signals-footer">
        <a href="{{ section.settings.archive_url }}" class="signals-archive-link">
          View Full Signal Archive â†’
        </a>
      </footer>
    {%- endif -%}

  </div>
</section>

<style>
.stellar-signals {
  padding: clamp(3rem, 8vw, 6rem) 1.5rem;
  background: linear-gradient(180deg, #000 0%, #0a0014 100%);
  position: relative;
  overflow: hidden;
}

.stellar-signals::before {
  content: '';
  position: absolute;
  inset: 0;
  background: 
    radial-gradient(circle at 20% 30%, var(--signal-color, #FF006E)15 0%, transparent 50%),
    radial-gradient(circle at 80% 70%, #8B5CF615 0%, transparent 50%);
  pointer-events: none;
}

.signals-container {
  max-width: 1400px;
  margin: 0 auto;
  position: relative;
  z-index: 1;
}

.signals-header {
  text-align: center;
  margin-bottom: 3rem;
}

.signals-title {
  font-family: 'Orbitron', monospace;
  font-size: clamp(2rem, 5vw, 3rem);
  font-weight: 900;
  text-transform: uppercase;
  color: #FFF;
  margin: 0 0 1rem;
  letter-spacing: 0.1em;
}

.signals-subtitle {
  font-size: 1.125rem;
  color: #A0A0A0;
  max-width: 600px;
  margin: 0 auto;
}

.signals-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(min(100%, 350px), 1fr));
  gap: 2rem;
  margin-bottom: 3rem;
}

.signal-card {
  background: rgba(255, 255, 255, 0.03);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 12px;
  padding: 1.5rem;
  position: relative;
  overflow: hidden;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.signal-card:hover {
  transform: translateY(-4px);
  border-color: var(--capsule-theme, var(--signal-color, #FF006E));
  box-shadow: 0 8px 32px rgba(255, 0, 110, 0.2);
}

.signal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 1rem;
  font-size: 0.75rem;
  text-transform: uppercase;
  letter-spacing: 0.1em;
}

.signal-number,
.signal-label {
  color: var(--capsule-theme, var(--signal-color, #FF006E));
  font-weight: 700;
  font-family: 'Orbitron', monospace;
}

.signal-timestamp {
  color: #808080;
}

.signal-visual {
  margin: 0 -1.5rem 1.5rem;
  aspect-ratio: 4/3;
  overflow: hidden;
}

.signal-visual img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.6s ease;
}

.signal-card:hover .signal-visual img {
  transform: scale(1.05);
}

.signal-title {
  font-size: 1.25rem;
  font-weight: 700;
  color: #FFF;
  margin: 0 0 0.5rem;
  line-height: 1.3;
}

.signal-excerpt,
.signal-message {
  color: #B0B0B0;
  line-height: 1.6;
  margin: 0 0 1rem;
}

.signal-link {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  color: var(--capsule-theme, var(--signal-color, #FF006E));
  text-decoration: none;
  font-weight: 600;
  font-size: 0.875rem;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  transition: gap 0.3s ease;
}

.signal-link:hover {
  gap: 0.75rem;
}

.signal-waves {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 20px;
  opacity: 0.3;
  color: var(--capsule-theme, var(--signal-color, #FF006E));
}

.signal-loader {
  display: flex;
  gap: 0.5rem;
  justify-content: center;
  margin-top: 1rem;
}

.signal-loader span {
  width: 8px;
  height: 8px;
  background: var(--signal-color, #FF006E);
  border-radius: 50%;
  animation: pulse 1.4s ease-in-out infinite;
}

.signal-loader span:nth-child(2) { animation-delay: 0.2s; }
.signal-loader span:nth-child(3) { animation-delay: 0.4s; }

@keyframes pulse {
  0%, 100% { opacity: 0.3; transform: scale(0.8); }
  50% { opacity: 1; transform: scale(1.2); }
}

.signals-empty {
  grid-column: 1 / -1;
  text-align: center;
  padding: 4rem 2rem;
  color: #808080;
}

.empty-icon {
  font-size: 4rem;
  margin-bottom: 1rem;
  opacity: 0.3;
}

.signals-footer {
  text-align: center;
  padding-top: 2rem;
  border-top: 1px solid rgba(255, 255, 255, 0.1);
}

.signals-archive-link {
  color: #FFF;
  text-decoration: none;
  font-size: 1.125rem;
  font-weight: 600;
  transition: color 0.3s ease;
}

.signals-archive-link:hover {
  color: var(--signal-color, #FF006E);
}

@media (max-width: 768px) {
  .signals-grid {
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }
}
</style>

<script>
if (!window.stellarSignals) {
  window.stellarSignals = {
    init: function() {
      // Twitter/X feed loading would go here
      // For now, this is a placeholder for future API integration
      const twitterCards = document.querySelectorAll('.signal-twitter');
      twitterCards.forEach(card => {
        // Simulate loading
        setTimeout(() => {
          card.querySelector('.signal-status').textContent = 'No live feed configured. Add your X API credentials.';
        }, 2000);
      });
    }
  };
  
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', () => window.stellarSignals.init());
  } else {
    window.stellarSignals.init();
  }
}
</script>

{% schema %}
{
  "name": "Stellar Signal Feed",
  "tag": "section",
  "class": "stellar-signals-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Live Signals"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Real-time transmissions from the void"
    },
    {
      "type": "color",
      "id": "signal_color",
      "label": "Signal Color",
      "default": "#FF006E"
    },
    {
      "type": "range",
      "id": "signal_count",
      "label": "Recent Capsules to Show",
      "min": 0,
      "max": 12,
      "step": 1,
      "default": 6
    },
    {
      "type": "checkbox",
      "id": "enable_twitter_feed",
      "label": "Enable X/Twitter Feed",
      "default": false,
      "info": "Requires API configuration"
    },
    {
      "type": "checkbox",
      "id": "show_archive_link",
      "label": "Show Archive Link",
      "default": true
    },
    {
      "type": "url",
      "id": "archive_url",
      "label": "Archive URL",
      "default": "/pages/archive"
    }
  ],
  "blocks": [
    {
      "type": "signal_card",
      "name": "Manual Signal",
      "settings": [
        {
          "type": "text",
          "id": "label",
          "label": "Label",
          "default": "ALERT"
        },
        {
          "type": "text",
          "id": "timestamp",
          "label": "Timestamp",
          "default": "Now"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "message",
          "label": "Message"
        },
        {
          "type": "url",
          "id": "link_url",
          "label": "Link URL"
        },
        {
          "type": "text",
          "id": "link_text",
          "label": "Link Text",
          "default": "View Signal"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Stellar Signals",
      "category": "Stellar Reverb"
    }
  ]
}
{% endschema %}