<section class="newsletter-cosmic" id="newsletter-{{ section.id }}">
  
  {%- comment -%} Background Layer {%- endcomment -%}
  <div class="newsletter-backdrop">
    <div class="newsletter-gradient"></div>
    {% if section.settings.show_particles %}
      <div class="newsletter-particles">
        {% for i in (1..15) %}
          <div class="particle"></div>
        {% endfor %}
      </div>
    {% endif %}
  </div>

  <div class="container">
    <div class="newsletter-content">

      {%- comment -%} Icon/Badge {%- endcomment -%}
      {% if section.settings.show_icon %}
        <div class="newsletter-icon">
          {% if section.settings.custom_icon != blank %}
            {{ section.settings.custom_icon }}
          {% else %}
            <svg width="60" height="60" viewBox="0 0 24 24" fill="none" stroke="currentColor">
              <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z" stroke-width="2"/>
              <path d="M22 6l-10 7L2 6" stroke-width="2"/>
            </svg>
          {% endif %}
        </div>
      {% endif %}

      {%- comment -%} Heading {%- endcomment -%}
      <h2 class="newsletter-title">
        {{ section.settings.heading | default: 'Join the Signal' }}
      </h2>

      {%- comment -%} Subheading {%- endcomment -%}
      {% if section.settings.subheading != blank %}
        <p class="newsletter-subtitle">
          {{ section.settings.subheading }}
        </p>
      {% endif %}

      {%- comment -%} Newsletter Form {%- endcomment -%}
      <div class="newsletter-form-wrapper">
        
        {% form 'customer', id: 'newsletter-form', class: 'newsletter-form' %}
          
          <input type="hidden" name="contact[tags]" value="{{ section.settings.subscriber_tags | default: 'newsletter' }}">
          
          <div class="form-field-wrapper">
            <label for="newsletter-email-{{ section.id }}" class="visually-hidden">
              {{ 'newsletter.placeholder' | t }}
            </label>
            
            <input
              type="email"
              id="newsletter-email-{{ section.id }}"
              name="contact[email]"
              class="newsletter-input"
              placeholder="{{ section.settings.input_placeholder | default: 'your@email.com' }}"
              required
              autocomplete="email"
            >

            <button type="submit" class="newsletter-btn">
              {% if section.settings.button_icon != blank %}
                <span class="btn-icon">{{ section.settings.button_icon }}</span>
              {% endif %}
              <span class="btn-text">{{ section.settings.button_text | default: 'Subscribe' }}</span>
            </button>
          </div>

          {%- comment -%} Success Message {%- endcomment -%}
          <div class="form-message form-success" style="display: none;">
            <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
              <path d="M4 10l4 4 8-8" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
            </svg>
            <span>{{ section.settings.success_message | default: 'Thanks for joining the signal!' }}</span>
          </div>

          {%- comment -%} Error Message {%- endcomment -%}
          <div class="form-message form-error" style="display: none;">
            <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
              <circle cx="10" cy="10" r="9" stroke="currentColor" stroke-width="2"/>
              <path d="M10 6v4M10 14h.01" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
            </svg>
            <span>{{ 'newsletter.error' | t | default: 'Please enter a valid email.' }}</span>
          </div>

        {% endform %}

        {%- comment -%} Privacy Note {%- endcomment -%}
        {% if section.settings.show_privacy_note %}
          <p class="privacy-note">
            {{ section.settings.privacy_text | default: 'âœ¨ Get early access + exclusive drops. No spam, ever.' }}
          </p>
        {% endif %}

      </div>

      {%- comment -%} Benefits List {%- endcomment -%}
      {% if section.settings.show_benefits %}
        <div class="newsletter-benefits">
          {% for i in (1..4) %}
            {% assign benefit_text = 'benefit_' | append: i | append: '_text' %}
            {% if section.settings[benefit_text] != blank %}
              <div class="benefit-item">
                <svg width="18" height="18" viewBox="0 0 18 18" fill="none" stroke="currentColor">
                  <path d="M3 9l4 4 8-8" stroke-width="2" stroke-linecap="round"/>
                </svg>
                <span>{{ section.settings[benefit_text] }}</span>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      {% endif %}

    </div>
  </div>

</section>

<style>
  #newsletter-{{ section.id }} {
    position: relative;
    padding: var(--spacing-xl, 4rem) 0;
    overflow: hidden;
  }

  /* Backdrop */
  .newsletter-backdrop {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .newsletter-gradient {
    position: absolute;
    inset: 0;
    background: {{ section.settings.background_gradient | default: 'linear-gradient(135deg, rgba(108, 36, 179, 0.3), rgba(40, 168, 214, 0.3))' }};
  }

  .newsletter-particles {
    position: absolute;
    inset: 0;
  }

  .newsletter-particles .particle {
    position: absolute;
    width: 4px;
    height: 4px;
    background: var(--cyan-blue, #28A8D6);
    border-radius: 50%;
    opacity: 0.6;
    animation: particle-rise 8s ease-in-out infinite;
  }

  {% for i in (1..15) %}
  .newsletter-particles .particle:nth-child({{ i }}) {
    left: {{ i | times: 6 }}%;
    animation-delay: {{ i | times: 0.3 }}s;
  }
  {% endfor %}

  /* Content */
  .newsletter-content {
    position: relative;
    z-index: 1;
    max-width: 700px;
    margin: 0 auto;
    text-align: center;
  }

  /* Icon */
  .newsletter-icon {
    color: var(--cyan-blue, #28A8D6);
    margin-bottom: var(--spacing-md, 1.5rem);
    animation: icon-float 3s ease-in-out infinite;
  }

  .newsletter-icon svg {
    filter: drop-shadow(0 0 20px rgba(40, 168, 214, 0.7));
  }

  /* Title */
  .newsletter-title {
    font-family: var(--font-title, "Orbitron", sans-serif);
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 900;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    margin-bottom: var(--spacing-sm, 1rem);
    background: {{ section.settings.title_gradient | default: 'linear-gradient(135deg, var(--neon-magenta), var(--cyan-blue))' }};
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  /* Subtitle */
  .newsletter-subtitle {
    font-size: 1.125rem;
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: var(--spacing-lg, 2.5rem);
  }

  /* Form */
  .newsletter-form-wrapper {
    background: rgba(13, 13, 13, 0.8);
    border: 2px solid rgba(40, 168, 214, 0.4);
    border-radius: var(--border-radius-lg, 18px);
    padding: var(--spacing-lg, 2.5rem);
    backdrop-filter: blur(20px);
    margin-bottom: var(--spacing-md, 1.5rem);
  }

  .form-field-wrapper {
    display: flex;
    gap: 0.75rem;
    margin-bottom: var(--spacing-sm, 1rem);
  }

  .newsletter-input {
    flex: 1;
    padding: 1rem 1.5rem;
    border-radius: var(--border-radius-pill, 999px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    background: rgba(0, 0, 0, 0.5);
    color: #fff;
    font-family: var(--font-body, "Montserrat", sans-serif);
    font-size: 1rem;
    transition: all 0.2s ease;
  }

  .newsletter-input::placeholder {
    color: rgba(255, 255, 255, 0.5);
  }

  .newsletter-input:focus {
    outline: none;
    border-color: var(--cyan-blue, #28A8D6);
    box-shadow: 0 0 20px rgba(40, 168, 214, 0.5);
  }

  .newsletter-btn {
    padding: 1rem 2rem;
    border-radius: var(--border-radius-pill, 999px);
    border: none;
    background: {{ section.settings.button_background | default: 'linear-gradient(135deg, var(--neon-magenta), var(--cyan-blue))' }};
    color: {{ section.settings.button_color | default: '#fff' }};
    font-family: var(--font-title, "Orbitron", sans-serif);
    font-size: 0.9rem;
    font-weight: 700;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    cursor: pointer;
    transition: all 0.2s ease;
    white-space: nowrap;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .newsletter-btn:hover {
    filter: brightness(1.1);
    box-shadow: 0 0 25px rgba(225, 60, 250, 0.8);
    transform: translateY(-2px);
  }

  /* Messages */
  .form-message {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.875rem 1.25rem;
    border-radius: var(--border-radius-md, 12px);
    font-size: 0.9rem;
    font-weight: 600;
  }

  .form-success {
    background: rgba(0, 240, 172, 0.15);
    border: 1px solid var(--radioactive-green, #00F0AC);
    color: var(--radioactive-green, #00F0AC);
  }

  .form-error {
    background: rgba(255, 68, 68, 0.15);
    border: 1px solid #ff4444;
    color: #ff4444;
  }

  /* Privacy Note */
  .privacy-note {
    font-size: 0.85rem;
    color: rgba(255, 255, 255, 0.7);
    margin-top: var(--spacing-sm, 1rem);
  }

  /* Benefits */
  .newsletter-benefits {
    display: flex;
    gap: var(--spacing-md, 1.5rem);
    justify-content: center;
    flex-wrap: wrap;
  }

  .benefit-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.8);
  }

  .benefit-item svg {
    color: var(--radioactive-green, #00F0AC);
    flex-shrink: 0;
  }

  /* Animations */
  @keyframes particle-rise {
    0% { transform: translateY(0) scale(1); opacity: 0.6; }
    50% { transform: translateY(-100px) scale(1.2); opacity: 1; }
    100% { transform: translateY(-200px) scale(0.8); opacity: 0; }
  }

  @keyframes icon-float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }

  /* Responsive */
  @media (max-width: 768px) {
    #newsletter-{{ section.id }} {
      padding: var(--spacing-lg, 2.5rem) 0;
    }

    .newsletter-form-wrapper {
      padding: var(--spacing-md, 1.5rem);
    }

    .form-field-wrapper {
      flex-direction: column;
    }

    .newsletter-btn {
      width: 100%;
      justify-content: center;
    }

    .newsletter-benefits {
      flex-direction: column;
      align-items: flex-start;
    }
  }
</style>

<script>
(function() {
  const form = document.getElementById('newsletter-form');
  
  if (form) {
    form.addEventListener('submit', function(e) {
      e.preventDefault();
      
      const email = form.querySelector('.newsletter-input').value;
      const btn = form.querySelector('.newsletter-btn');
      const successMsg = form.querySelector('.form-success');
      const errorMsg = form.querySelector('.form-error');
      
      // Hide messages
      successMsg.style.display = 'none';
      errorMsg.style.display = 'none';
      
      // Show loading
      btn.disabled = true;
      btn.innerHTML = '<span>Subscribing...</span>';
      
      // Submit form
      fetch(form.action, {
        method: 'POST',
        body: new FormData(form),
        headers: {
          'Accept': 'application/json'
        }
      })
      .then(response => response.json())
      .then(data => {
        // Show success
        successMsg.style.display = 'flex';
        btn.innerHTML = '<span>Subscribed!</span>';
        form.querySelector('.newsletter-input').value = '';
        
        // Reset after 3s
        setTimeout(() => {
          btn.disabled = false;
          btn.innerHTML = '<span>{{ section.settings.button_text | default: "Subscribe" }}</span>';
        }, 3000);
      })
      .catch(error => {
        // Show error
        errorMsg.style.display = 'flex';
        btn.disabled = false;
        btn.innerHTML = '<span>{{ section.settings.button_text | default: "Subscribe" }}</span>';
      });
    });
  }
})();
</script>

