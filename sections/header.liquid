  .nav-link {
    font-family: 'Orbitron', sans-serif;
    font-size: 0.875rem;
    font-weight: 500;
    letter-spacing: 0.05em;
    color: var(--chrome-silver);
    text-decoration: none;
    text-transform: uppercase;
    position: relative;
    padding: 0.5rem 0;
    transition: color 0.3s ease;
  }

  .nav-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background: linear-gradient(90deg, var(--cyan-blue), var(--neon-magenta));
    transition: width 0.3s ease;
  }

  .nav-link:hover,
  .nav-link.active {
    color: #ffffff;
  }

  .nav-link:hover::after,
  .nav-link.active::after {
    width: 100%;
  }

  /* â•â•â• Navigation Actions (Right Side) â•â•â• */
  .nav-actions {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    flex-shrink: 0;
  }

  /* â•â•â• SIGNAL SEEKER LINK â€” DIFFERENTIATED â•â•â• */
  .signal-seeker-link {
    font-family: 'Orbitron', sans-serif;
    font-size: 0.875rem;
    font-weight: 700;
    letter-spacing: 0.1em;
    color: var(--radioactive-green);
    text-decoration: none;
    text-transform: uppercase;
    padding: 0.75rem 1.5rem;
    border: 2px solid var(--radioactive-green);
    border-radius: 4px;
    position: relative;
    overflow: hidden;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    transition: all 0.3s ease;
    box-shadow: 0 0 20px rgba(0, 240, 172, 0.3);
  }

  .signal-dot {
    width: 8px;
    height: 8px;
    background: var(--radioactive-green);
    border-radius: 50%;
    animation: signalPulse 2s ease-in-out infinite;
  }

  @keyframes signalPulse {
    0%, 100% { 
      opacity: 1;
      box-shadow: 0 0 8px var(--radioactive-green);
    }
    50% { 
      opacity: 0.5;
      box-shadow: 0 0 16px var(--radioactive-green);
    }
  }

  .signal-text {
    position: relative;
    z-index: 2;
  }

  .signal-glitch {
    position: absolute;
    top: 0.75rem;
    left: 2rem;
    color: var(--neon-magenta);
    opacity: 0;
    z-index: 1;
    pointer-events: none;
  }

  .signal-seeker-link:hover {
    background: var(--radioactive-green);
    color: var(--void-black);
    box-shadow: 0 0 40px rgba(0, 240, 172, 0.6);
    transform: translateY(-2px);
  }

  .signal-seeker-link:hover .signal-glitch {
    animation: glitchEffect 0.3s linear infinite;
  }

  @keyframes glitchEffect {
    0% { 
      opacity: 0;
      transform: translate(0, 0);
    }
    20% { 
      opacity: 0.8;
      transform: translate(-2px, 1px);
    }
    40% { 
      opacity: 0;
      transform: translate(2px, -1px);
    }
    60% { 
      opacity: 0.8;
      transform: translate(-1px, 2px);
    }
    80% { 
      opacity: 0;
      transform: translate(1px, -2px);
    }
    100% { 
      opacity: 0;
      transform: translate(0, 0);
    }
  }

