      "default": true
    },
    {
      "type": "header",
      "content": "Subtitle"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "TRANSMITTING SIGNALS FROM THE VOID"
    },
    {
      "type": "header",
      "content": "Call to Action"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Button Text",
      "default": "ENTER THE ARCHIVE"
    },
    {
      "type": "url",
      "id": "cta_url",
      "label": "Button URL",
      "default": "/pages/archives"
    },
    {
      "type": "header",
      "content": "Extended Features"
    },
    {
      "type": "checkbox",
      "id": "extended_version",
      "label": "Enable extended version (more elements)",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_terminal_header",
      "label": "Show terminal header",
