{% comment %}
  ═══════════════════════════════════════════════════════════
  STELLAR REVERB - HERO COSMIC SECTION
  ═══════════════════════════════════════════════════════════
  
  Save this as: sections/hero-cosmic.liquid
  Then add to your homepage via Theme Editor
  
  ═══════════════════════════════════════════════════════════
{% endcomment %}

{{ 'hero-cosmic.css' | asset_url | stylesheet_tag }}

<section class="hero-cosmic {% if section.settings.extended_version %}hero-cosmic--extended{% endif %}">
  
  {% if section.settings.show_terminal_header %}
    <div class="terminal-header">
      <span class="terminal-user">{{ section.settings.terminal_user }}</span>
      <span class="terminal-path">{{ section.settings.terminal_path }}</span>
      <span class="terminal-prompt">$</span>
    </div>
  {% endif %}
  
  <div class="hero-content">
    
    {% if section.settings.show_decode_status %}
      <div class="decode-status">
        <span class="decode-text">{{ section.settings.decode_text }}</span>
        <span class="decode-dots">
          <span>.</span>
          <span>.</span>
          <span>.</span>
        </span>
      </div>
    {% endif %}
    
    {% if section.settings.title != blank %}
      <h1 
        class="cosmic-title {{ section.settings.color_combo }} {% if section.settings.chromatic_effect %}chromatic{% endif %}" 
        data-text="{{ section.settings.title }}"
      >
        {{ section.settings.title }}
        {% if section.settings.show_cursor %}
          <span class="cosmic-cursor"></span>
        {% endif %}
      </h1>
    {% endif %}
    
    {% if section.settings.show_status_line %}
      <div class="status-line">
        <span class="status-item">
          <span class="status-label">{{ section.settings.status_label_1 }}:</span>
          <span class="status-value status-active">{{ section.settings.status_value_1 }}</span>
        </span>
        <span class="status-divider">|</span>
        <span class="status-item">
          <span class="status-label">{{ section.settings.status_label_2 }}:</span>
          <span class="status-value">{{ section.settings.status_value_2 }}</span>
        </span>
        <span class="status-divider">|</span>
        <span class="status-item">
          <span class="status-label">{{ section.settings.status_label_3 }}:</span>
          <span class="status-value">{{ section.settings.status_value_3 }}</span>
        </span>
      </div>
    {% endif %}
    
    {% if section.settings.subtitle != blank %}
      <p class="cosmic-subtitle">
        <span class="typing-text">{{ section.settings.subtitle }}</span>
      </p>
    {% endif %}
    
    {% if section.settings.cta_text != blank and section.settings.cta_url != blank %}
      <a href="{{ section.settings.cta_url }}" class="cosmic-cta">
        {{ section.settings.cta_text }}
        <svg width="20" height="20" viewBox="0 0 20 20" fill="none" stroke="currentColor">
          <path d="M5 10h10M10 5l5 5-5 5" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </a>
    {% endif %}
    
  </div>
  
  {% if section.settings.show_scroll_indicator %}
    <div class="scroll-indicator">
      <span class="scroll-text">{{ section.settings.scroll_text }}</span>
      <div class="scroll-arrow">▼</div>
    </div>
  {% endif %}
  
</section>

{% schema %}
{
  "name": "Hero Cosmic",
  "tag": "section",
  "class": "section-hero-cosmic",
  "settings": [
    {
      "type": "header",
      "content": "Main Title"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "STELLAR REVERB"
    },
    {
      "type": "select",
      "id": "color_combo",
      "label": "Color Combo",
      "options": [
        {
          "value": "combo-cyan-magenta",
          "label": "Cyan-Magenta (Brand)"
        },
        {
          "value": "combo-gold-cyan",
          "label": "Gold-Cyan (Luxury)"
        },
        {
          "value": "combo-green-purple",
          "label": "Green-Purple (Matrix)"
        },
        {
          "value": "combo-orange-blue",
          "label": "Orange-Blue (Retro)"
        },
        {
          "value": "combo-red-white",
          "label": "Red-White (Bold)"
        }
      ],
      "default": "combo-cyan-magenta"
    },
    {
      "type": "checkbox",
      "id": "chromatic_effect",
      "label": "Enable chromatic aberration (RGB split)",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_cursor",
