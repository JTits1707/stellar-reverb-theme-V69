    },
    {
      "type": "checkbox",
      "id": "show_decode_status",
      "label": "Show 'DECODING' status",
      "default": false
    },
    {
      "type": "text",
      "id": "decode_text",
      "label": "Decode status text",
      "default": "DECODING"
    },
    {
      "type": "checkbox",
      "id": "show_status_line",
      "label": "Show status line",
      "default": false,
      "info": "Shows signal, frequency, capsules count"
    },
    {
      "type": "text",
      "id": "status_label_1",
      "label": "Status label 1",
      "default": "SIGNAL"
    },
    {
      "type": "text",
      "id": "status_value_1",
      "label": "Status value 1",
      "default": "ACTIVE"
    },
    {
      "type": "text",
      "id": "status_label_2",
      "label": "Status label 2",
      "default": "FREQUENCY"
    },
    {
      "type": "text",
      "id": "status_value_2",
      "label": "Status value 2",
      "default": "432 Hz"
    },
    {
      "type": "text",
      "id": "status_label_3",
      "label": "Status label 3",
      "default": "CAPSULES"
    },
    {
      "type": "text",
      "id": "status_value_3",
      "label": "Status value 3",
      "default": "014"
    },
    {
      "type": "checkbox",
      "id": "show_scroll_indicator",
      "label": "Show scroll indicator",
      "default": true
    },
    {
      "type": "text",
      "id": "scroll_text",
      "label": "Scroll indicator text",
      "default": "SCROLL TO EXPLORE"
    }
  ],
  "presets": [
    {
      "name": "Hero Cosmic"
    }
  ]
}
{% endschema %}
