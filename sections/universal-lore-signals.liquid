<section id="lore-signals" class="lore-signals" data-section-type="signal-door" aria-label="Signal activation">
  <style>
    #lore-signals{padding:4rem 1.25rem;background:linear-gradient(135deg,rgba(225,60,250,0.05) 0%,rgba(40,168,214,0.05) 100%);border-top:1px solid rgba(40,168,214,.25);border-bottom:1px solid rgba(225,60,250,.25)}
    .signal-door{margin:2rem auto;max-width:900px;padding:2rem;background:var(--dark-gray,#121212);border:2px solid var(--cyan-blue,#28A8D6);border-radius:6px;position:relative;transition:all 0.3s ease}
    .signal-door.door-hover-active{border-color:var(--neon-magenta,#E13CFA);box-shadow:0 0 20px rgba(225,60,250,.3)}
    .door-content{text-align:center}
    .door-title{font-family:'Orbitron',monospace;color:var(--radioactive-green,#00F0AC);text-transform:uppercase;letter-spacing:0.1em;font-size:1.5rem;margin-bottom:1rem}
    .door-text{font-family:'Montserrat',sans-serif;color:rgba(255,255,255,.85);line-height:1.6;margin-bottom:1.25rem}
    .door-cta{font-family:'Orbitron',monospace;background:var(--neon-magenta,#E13CFA);color:#fff;border:none;padding:0.8rem 1.5rem;border-radius:4px;cursor:pointer;text-transform:uppercase;font-weight:700;letter-spacing:0.08em;transition:all 0.2s ease;display:inline-block}
    .door-cta:hover{filter:brightness(1.1);box-shadow:0 0 20px rgba(225,60,250,.5)}
    .energy-core{position:absolute;width:30px;height:30px;border-radius:50%;background:radial-gradient(circle at 30% 30%, rgba(225,60,250,0.5), transparent);top:10px;right:10px;opacity:0.3;transition:opacity 0.3s ease}
    .signal-door.door-hover-active .energy-core{opacity:1;animation:pulse-core 1s ease-in-out}
    @keyframes pulse-core{0%,100%{transform:scale(1)}50%{transform:scale(1.2)}}
  </style>

  <div class="signal-door" aria-label="Signal frequency door">
    <div class="energy-core" aria-hidden="true"></div>
    <div class="door-content">
      <h3 class="door-title">ðŸŒŒ Signal Frequency Locked</h3>
      <p class="door-text">Establishing transmission parameters...</p>
      <button class="door-cta" onclick="document.getElementById('signalForm').scrollIntoView({behavior:'smooth'})">Open Channel</button>
    </div>
  </div>
</section>

