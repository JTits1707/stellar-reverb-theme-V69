{% comment %}
  Universal Lore – Community Signals / Social Proof
{% endcomment %}

<section class="lore-section" data-section-id="{{ section.id }}">
  <h2 class="section-title">
    {{ section.settings.title | default: 'COMMUNITY SIGNALS' }}
  </h2>

  {% if section.blocks.size > 0 %}
    <div class="lore-signals__grid">
      {% for block in section.blocks %}
        <article class="lore-signals__card" {{ block.shopify_attributes }}>
          {% if block.settings.meta != blank %}
            <div class="lore-signals__meta">
              {{ block.settings.meta }}
            </div>
          {% endif %}

          {% if block.settings.body != blank %}
            <p>{{ block.settings.body }}</p>
          {% endif %}
        </article>
      {% endfor %}
    </div>
  {% else %}
    <p style="text-align:center;color:#aaa;font-size:0.9rem;margin-top:1.5rem;">
      No signals yet. Once the first wave of Signal Seekers arrive, their echoes will show up here.
    </p>
  {% endif %}
</section>

{% schema %}
{
  "name": "Universal Lore · Signals",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section heading",
      "default": "Community Signals"
    }
  ],
  "blocks": [
    {
      "type": "signal",
      "name": "Signal",
      "settings": [
        {
          "type": "text",
          "id": "meta",
          "label": "Meta (role / location / capsule)",
          "default": "Signal Seeker · Capsule 001"
        },
        {
          "type": "textarea",
          "id": "body",
          "label": "Signal text",
          "default": "“It feels like wearing a broadcast from another timeline.”"
        }
      ]
    }
  ],
  "max_blocks": 12,
  "presets": [
    {
      "name": "Universal Lore · Signals",
      "blocks": [
        {
          "type": "signal"
        },
        {
          "type": "signal"
        }
      ]
    }
  ]
}
{% endschema %}