    <div class="featured-content">
      
      {%- comment -%} Transmission Header {%- endcomment -%}
      {% if section.settings.transmission_header != blank %}
        <div class="featured-tag orbitron">
          {{ section.settings.transmission_header }}
        </div>
      {% endif %}
      
      {%- comment -%} Title from Product or Fallback {%- endcomment -%}
      <h2 class="featured-title orbitron">
        {% if featured_product %}
          {{ featured_product.title | upcase }}
        {% elsif section.settings.capsule_title != blank %}
          {{ section.settings.capsule_title | upcase }}
        {% else %}
          FEATURED TRANSMISSION
        {% endif %}
      </h2>
      
      {%- comment -%} Description from Product or Fallback {%- endcomment -%}
      {% if featured_product and featured_product.description != blank %}
        <div class="featured-description">
          {{ featured_product.description | truncate: 300 }}
        </div>
      {% elsif section.settings.description != blank %}
        <div class="featured-description">
          {{ section.settings.description }}
        </div>
      {% endif %}
      
      {%- comment -%} Product Tags {%- endcomment -%}
      {% if featured_product and featured_product.tags.size > 0 %}
        <div class="capsule-tags">
          {% for tag in featured_product.tags limit: 4 %}
            <span class="tag-pill orbitron">
              #{{ tag | handleize }}
            </span>
          {% endfor %}
        </div>
      {% endif %}
      
      {%- comment -%} CTA Button {%- endcomment -%}
      <div class="featured-ctas">
        {% if featured_product %}
          <a 
            href="{{ featured_product.url }}" 
            class="featured-cta featured-cta-primary"
          >
            {{ section.settings.button_text | default: 'SHOP THE CAPSULE' }}
            <svg width="20" height="20" viewBox="0 0 20 20" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M5 10h10M10 5l5 5-5 5"/>
            </svg>
          </a>
        {% elsif section.settings.primary_cta_link != blank %}
          <a 
            href="{{ section.settings.primary_cta_link }}" 
            class="featured-cta featured-cta-primary"
          >
            {{ section.settings.button_text | default: 'EXPLORE CAPSULE' }}
            <svg width="20" height="20" viewBox="0 0 20 20" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M5 10h10M10 5l5 5-5 5"/>
            </svg>
          </a>
        {% endif %}
      </div>
      
    </div>
    
  </div>
  
</section>

