{% comment %}
  STELLAR REVERB - AR Portal (Holographic Quickview Rift)
  Modal <model-viewer> trigger with glitch particles and portal flare
  Native Shopify AR â€“ seekers step into the capsule
{% endcomment %}

{% liquid
  assign product_handle = section.settings.product_handle
  assign product = all_products[product_handle]
  assign has_3d_model = false
  
  for media in product.media
    if media.media_type == 'model'
      assign has_3d_model = true
      break
    endif
  endfor
%}

{%- if has_3d_model -%}
<section 
  class="stellar-ar-portal"
  data-section-id="{{ section.id }}"
  data-product-handle="{{ product_handle }}">

  <div class="ar-portal-trigger" data-ar-trigger>
    {%- if section.settings.trigger_image != blank -%}
      <img 
        src="{{ section.settings.trigger_image | image_url: width: 800 }}" 
        alt="{{ section.settings.trigger_text }}"
        class="trigger-image"
        loading="lazy">
    {%- elsif product.featured_image -%}
      <img 
        src="{{ product.featured_image | image_url: width: 800 }}" 
        alt="{{ product.title }}"
        class="trigger-image"
        loading="lazy">
    {%- endif -%}

    <div class="portal-overlay">
      <div class="portal-icon">
        <svg width="64" height="64" viewBox="0 0 64 64" fill="none">
          <circle cx="32" cy="32" r="30" stroke="currentColor" stroke-width="2" opacity="0.3"/>
          <circle cx="32" cy="32" r="20" stroke="currentColor" stroke-width="2" opacity="0.5"/>
          <circle cx="32" cy="32" r="10" stroke="currentColor" stroke-width="2"/>
          <path d="M32 2 L32 22 M32 42 L32 62 M2 32 L22 32 M42 32 L62 32" stroke="currentColor" stroke-width="2"/>
        </svg>
      </div>
      <span class="portal-text">{{ section.settings.trigger_text | default: "ENTER THE RIFT" }}</span>
    </div>

    <div class="glitch-particles" aria-hidden="true">
      {%- for i in (1..12) -%}
        <div class="glitch-particle" style="--angle: {{ i | times: 30 }}deg;"></div>
      {%- endfor -%}
    </div>
  </div>

  {%- comment -%} AR Portal Modal {%- endcomment -%}
  <div class="ar-modal" data-ar-modal aria-hidden="true" role="dialog">
    <div class="modal-backdrop" data-modal-close></div>
    
    <div class="modal-container">
      <button class="modal-close" data-modal-close aria-label="Close AR Portal">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M18 6L6 18M6 6l12 12"/>
        </svg>
      </button>

      <div class="modal-content">
        <header class="modal-header">
          <h2 class="modal-title glitch-text" data-text="{{ product.title }}">
            {{ product.title }}
          </h2>
          {%- if section.settings.subtitle != blank -%}
            <p class="modal-subtitle">{{ section.settings.subtitle }}</p>
          {%- endif -%}
        </header>

        <div class="ar-viewer-wrapper">
          {%- for media in product.media -%}
            {%- if media.media_type == 'model' -%}
              <model-viewer 
                src="{{ media.sources[1].url }}"
                ios-src="{{ media.sources[0].url }}"
                alt="{{ product.title }}"
                ar
                ar-modes="webxr scene-viewer quick-look"
                camera-controls
                auto-rotate
                shadow-intensity="1"
                exposure="0.8"
                poster="{{ product.featured_image | image_url: width: 1200 }}"
                class="ar-model-viewer"
                data-model-viewer>
                
                <div class="ar-viewer-loading" slot="poster">
                  <div class="loading-spinner"></div>
                  <span>Loading Rift...</span>
                </div>

                <button slot="ar-button" class="ar-activate-btn">
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M2 12s3-7 10-7 10 7 10 7-3 7-10 7-10-7-10-7z"/>
                    <circle cx="12" cy="12" r="3"/>
                  </svg>
                  <span>ACTIVATE AR MODE</span>
                </button>
              </model-viewer>
              {%- break -%}
            {%- endif -%}
          {%- endfor -%}
        </div>

        {%- if section.settings.show_product_info -%}
          <footer class="modal-footer">
            <div class="product-info">
              {%- if product.price -%}
                <span class="product-price">{{ product.price | money }}</span>
              {%- endif -%}
              {%- if product.available -%}
                <a href="{{ product.url }}" class="product-cta">
                  VIEW FULL CAPSULE
                  <svg width="16" height="16" viewBox="0 0 16 16" fill="none" stroke="currentColor">
                    <path d="M1 8h14M9 2l6 6-6 6" stroke-width="2"/>
                  </svg>
                </a>
              {%- else -%}
                <span class="product-sold-out">TRANSMISSION COMPLETE</span>
              {%- endif -%}
            </div>
          </footer>
        {%- endif -%}
      </div>

      <div class="portal-flare" aria-hidden="true"></div>
    </div>
  </div>

</section>
{%- else -%}
  {%- comment -%} Fallback if no 3D model available {%- endcomment -%}
  <div class="ar-portal-unavailable" style="padding: 2rem; text-align: center; color: #808080;">
    <p>AR Portal requires a 3D model. Add one to product: {{ product_handle }}</p>
  </div>
{%- endif -%}

<style>
.stellar-ar-portal {
  position: relative;
}

.ar-portal-trigger {
  position: relative;
  cursor: pointer;
  overflow: hidden;
  border-radius: 12px;
  aspect-ratio: 1;
  max-width: 600px;
  margin: 0 auto;
}

.trigger-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.6s ease;
}

.ar-portal-trigger:hover .trigger-image {
  transform: scale(1.05);
}

.portal-overlay {
  position: absolute;
  inset: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 1rem;
  background: rgba(0, 0, 0, 0.7);
  opacity: 0;
  transition: opacity 0.4s ease;
  backdrop-filter: blur(8px);
}

.ar-portal-trigger:hover .portal-overlay {
  opacity: 1;
}

.portal-icon {
  color: #FF006E;
  animation: portalPulse 2s ease-in-out infinite;
}

@keyframes portalPulse {
  0%, 100% {
    transform: scale(1) rotate(0deg);
    opacity: 1;
  }
  50% {
    transform: scale(1.1) rotate(180deg);
    opacity: 0.8;
  }
}

.portal-text {
  font-family: 'Orbitron', monospace;
  font-size: 1.25rem;
  font-weight: 800;
  text-transform: uppercase;
  letter-spacing: 0.15em;
  color: #FFF;
  text-shadow: 0 0 20px #FF006E;
}

.glitch-particles {
  position: absolute;
  inset: 0;
  pointer-events: none;
  opacity: 0;
  transition: opacity 0.4s ease;
}

.ar-portal-trigger:hover .glitch-particles {
  opacity: 1;
}

.glitch-particle {
  position: absolute;
  left: 50%;
  top: 50%;
  width: 4px;
  height: 20px;
  background: linear-gradient(180deg, #FF006E, transparent);
  transform-origin: center;
  transform: rotate(var(--angle)) translateY(-50px);
  animation: particleSwarm 1.5s ease-out infinite;
  animation-delay: calc(var(--angle) * 0.01s);
}

@keyframes particleSwarm {
  0% {
    opacity: 0;
    transform: rotate(var(--angle)) translateY(-50px) scaleY(1);
  }
  50% {
    opacity: 1;
  }
  100% {
    opacity: 0;
    transform: rotate(var(--angle)) translateY(-150px) scaleY(0.5);
  }
}

/* AR Modal */
.ar-modal {
  position: fixed;
  inset: 0;
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 1rem;
  opacity: 0;
  visibility: hidden;
  transition: opacity 0.4s ease, visibility 0.4s ease;
}

.ar-modal[aria-hidden="false"] {
  opacity: 1;
  visibility: visible;
}

.modal-backdrop {
  position: absolute;
  inset: 0;
  background: rgba(0, 0, 0, 0.95);
  backdrop-filter: blur(10px);
  cursor: pointer;
}

.modal-container {
  position: relative;
  max-width: 900px;
  width: 100%;
  max-height: 90vh;
  background: linear-gradient(135deg, #0a0014 0%, #1a0028 100%);
  border: 2px solid #FF006E;
  border-radius: 16px;
  overflow: hidden;
  box-shadow: 
    0 0 40px rgba(255, 0, 110, 0.4),
    0 20px 60px rgba(0, 0, 0, 0.8);
  animation: modalSlideIn 0.5s cubic-bezier(0.4, 0, 0.2, 1);
}

@keyframes modalSlideIn {
  from {
    transform: translateY(50px) scale(0.9);
    opacity: 0;
  }
  to {
    transform: translateY(0) scale(1);
    opacity: 1;
  }
}

.modal-close {
  position: absolute;
  top: 1rem;
  right: 1rem;
  z-index: 10;
  background: rgba(0, 0, 0, 0.8);
  border: 1px solid #FF006E;
  border-radius: 50%;
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #FFF;
  cursor: pointer;
  transition: all 0.3s ease;
}

.modal-close:hover {
  background: #FF006E;
  transform: rotate(90deg);
}

.modal-content {
  padding: 2rem;
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}

.modal-header {
  text-align: center;
}

.modal-title {
  font-family: 'Orbitron', monospace;
  font-size: clamp(1.5rem, 4vw, 2rem);
  font-weight: 900;
  text-transform: uppercase;
  color: #FFF;
  margin: 0 0 0.5rem;
  position: relative;
  display: inline-block;
}

.glitch-text::before,
.glitch-text::after {
  content: attr(data-text);
  position: absolute;
  left: 0;
  top: 0;
}

.glitch-text::before {
  color: #FF006E;
  animation: glitch1 3s infinite;
  clip-path: polygon(0 0, 100% 0, 100% 45%, 0 45%);
}

.glitch-text::after {
  color: #28A8D6;
  animation: glitch2 3s infinite;
  clip-path: polygon(0 55%, 100% 55%, 100% 100%, 0 100%);
}

@keyframes glitch1 {
  0%, 100% { transform: translate(0); }
  20% { transform: translate(-3px, 3px); }
  40% { transform: translate(-3px, -3px); }
  60% { transform: translate(3px, 3px); }
  80% { transform: translate(3px, -3px); }
}

@keyframes glitch2 {
  0%, 100% { transform: translate(0); }
  20% { transform: translate(3px, -3px); }
  40% { transform: translate(3px, 3px); }
  60% { transform: translate(-3px, -3px); }
  80% { transform: translate(-3px, 3px); }
}

.modal-subtitle {
  color: #A0A0A0;
  font-size: 0.875rem;
  letter-spacing: 0.1em;
  text-transform: uppercase;
}

.ar-viewer-wrapper {
  position: relative;
  width: 100%;
  height: 500px;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 12px;
  overflow: hidden;
  border: 1px solid rgba(255, 255, 255, 0.1);
}

.ar-model-viewer {
  width: 100%;
  height: 100%;
  --poster-color: transparent;
}

.ar-viewer-loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 1rem;
  color: #FFF;
  font-family: 'Orbitron', monospace;
}

.loading-spinner {
  width: 50px;
  height: 50px;
  border: 3px solid rgba(255, 0, 110, 0.3);
  border-top-color: #FF006E;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.ar-activate-btn {
  display: inline-flex;
  align-items: center;
  gap: 0.75rem;
  padding: 1rem 2rem;
  background: linear-gradient(135deg, #FF006E, #8B5CF6);
  color: #FFF;
  font-family: 'Orbitron', monospace;
  font-weight: 800;
  font-size: 0.875rem;
  text-transform: uppercase;
  letter-spacing: 0.1em;
  border: none;
  border-radius: 8px;
  cursor: pointer;
  transition: all 0.3s ease;
  box-shadow: 0 0 20px rgba(255, 0, 110, 0.5);
}

.ar-activate-btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 40px rgba(255, 0, 110, 0.7);
}

.modal-footer {
  border-top: 1px solid rgba(255, 255, 255, 0.1);
  padding-top: 1.5rem;
}

.product-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
  gap: 1rem;
}

.product-price {
  font-size: 1.5rem;
  font-weight: 900;
  color: #00FF88;
  font-family: 'Orbitron', monospace;
}

.product-cta {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.75rem 1.5rem;
  background: #FF006E;
  color: #FFF;
  font-weight: 800;
  font-size: 0.875rem;
  text-transform: uppercase;
  text-decoration: none;
  border-radius: 6px;
  transition: all 0.3s ease;
}

.product-cta:hover {
  background: #8B5CF6;
  transform: translateX(4px);
}

.product-sold-out {
  color: #808080;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.1em;
}

.portal-flare {
  position: absolute;
  inset: -50%;
  background: radial-gradient(circle, #FF006E33 0%, transparent 70%);
  opacity: 0;
  animation: flare 3s ease-in-out infinite;
  pointer-events: none;
}

@keyframes flare {
  0%, 100% { opacity: 0; transform: scale(0.8); }
  50% { opacity: 1; transform: scale(1.2); }
}

@media (max-width: 768px) {
  .ar-viewer-wrapper {
    height: 400px;
  }
  
  .modal-content {
    padding: 1.5rem;
  }
}
</style>

<script type="module">
// Load model-viewer if not already loaded
if (!customElements.get('model-viewer')) {
  const script = document.createElement('script');
  script.type = 'module';
  script.src = 'https://ajax.googleapis.com/ajax/libs/model-viewer/3.3.0/model-viewer.min.js';
  document.head.appendChild(script);
}

document.addEventListener('DOMContentLoaded', () => {
  const trigger = document.querySelector('[data-ar-trigger]');
  const modal = document.querySelector('[data-ar-modal]');
  const closeButtons = modal?.querySelectorAll('[data-modal-close]');

  if (!trigger || !modal) return;

  trigger.addEventListener('click', () => {
    modal.setAttribute('aria-hidden', 'false');
    document.body.style.overflow = 'hidden';
  });

  closeButtons.forEach(btn => {
    btn.addEventListener('click', () => {
      modal.setAttribute('aria-hidden', 'true');
      document.body.style.overflow = '';
    });
  });

  // Close on Escape key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && modal.getAttribute('aria-hidden') === 'false') {
      modal.setAttribute('aria-hidden', 'true');
      document.body.style.overflow = '';
    }
  });
});
</script>

{% schema %}
{
  "name": "AR Portal",
  "tag": "section",
  "class": "stellar-ar-portal-section",
  "settings": [
    {
      "type": "header",
      "content": "Product 3D Model"
    },
    {
      "type": "text",
      "id": "product_handle",
      "label": "Product Handle",
      "info": "Enter the product handle that has a 3D model"
    },
    {
      "type": "header",
      "content": "Trigger Customization"
    },
    {
      "type": "image_picker",
      "id": "trigger_image",
      "label": "Trigger Image",
      "info": "Leave blank to use product featured image"
    },
    {
      "type": "text",
      "id": "trigger_text",
      "label": "Trigger Text",
      "default": "ENTER THE RIFT"
    },
    {
      "type": "header",
      "content": "Modal Content"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Holographic Quickview"
    },
    {
      "type": "checkbox",
      "id": "show_product_info",
      "label": "Show Product Info & CTA",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "AR Portal",
      "category": "Stellar Reverb"
    }
  ]
}
{% endschema %}