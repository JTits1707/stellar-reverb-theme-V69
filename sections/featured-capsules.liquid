{% comment %}
  ═══════════════════════════════════════════════════════════
  STELLAR REVERB - FEATURED CAPSULES SECTION
  ═══════════════════════════════════════════════════════════
  
  Showcase selected products on homepage
  
  ═══════════════════════════════════════════════════════════
{% endcomment %}

<section class="featured-capsules" id="featured-{{ section.id }}">
  
  <div class="container">

    {%- comment -%} Section Header {%- endcomment -%}
    <div class="section-header">
      
      {% if section.settings.eyebrow_text != blank %}
        <div class="section-eyebrow">
          {{ section.settings.eyebrow_text }}
        </div>
      {% endif %}

      <h2 class="section-title">
        {{ section.settings.heading | default: 'Featured Capsules' }}
      </h2>

      {% if section.settings.subheading != blank %}
        <p class="section-subtitle">
          {{ section.settings.subheading }}
        </p>
      {% endif %}

    </div>

    {%- comment -%} Products Grid {%- endcomment -%}
    <div class="capsules-grid capsules-grid--{{ section.settings.grid_columns }}">
      
      {% for block in section.blocks %}
        {% if block.type == 'product' and block.settings.product != blank %}
          {% assign product = block.settings.product %}
          
          <div class="capsule-item" {{ block.shopify_attributes }}>
            {% render 'product-card-stellar', 
              product: product,
              show_badge: section.settings.show_badges,
              show_quick_add: section.settings.show_quick_add,
              image_ratio: section.settings.image_ratio
            %}
          </div>

        {% endif %}
      {% endfor %}

    </div>

    {%- comment -%} View All CTA {%- endcomment -%}
    {% if section.settings.show_view_all %}
      <div class="section-cta">
        <a 
          href="{{ section.settings.view_all_url | default: '/collections/all' }}" 
          class="btn btn-secondary"
        >
          {{ section.settings.view_all_text | default: 'View All Capsules' }}
          <svg width="20" height="20" viewBox="0 0 20 20" fill="none" stroke="currentColor">
            <path d="M5 10h10M10 5l5 5-5 5" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </a>
      </div>
    {% endif %}

  </div>

</section>

<style>
  #featured-{{ section.id }} {
    padding: var(--spacing-xl, 4rem) 0;
    position: relative;
  }

  /* Section Header */
  .section-header {
    text-align: center;
    max-width: 800px;
    margin: 0 auto var(--spacing-xl, 4rem);
  }

  .section-eyebrow {
    display: inline-block;
    padding: 0.4rem 0.9rem;
    border-radius: var(--border-radius-pill, 999px);
    background: {{ section.settings.eyebrow_background | default: 'rgba(40, 168, 214, 0.2)' }};
    border: 1px solid {{ section.settings.eyebrow_border | default: 'var(--cyan-blue)' }};
    color: {{ section.settings.eyebrow_color | default: 'var(--cyan-blue)' }};
    font-family: var(--font-title, "Orbitron", sans-serif);
    font-size: 0.8rem;
    font-weight: 700;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    margin-bottom: var(--spacing-sm, 1rem);
  }

  .section-title {
    font-family: var(--font-title, "Orbitron", sans-serif);
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 900;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    margin-bottom: var(--spacing-sm, 1rem);
    background: {{ section.settings.title_gradient | default: 'linear-gradient(135deg, var(--neon-magenta), var(--cyan-blue))' }};
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .section-subtitle {
    font-size: 1.125rem;
    line-height: 1.6;
    color: {{ section.settings.subtitle_color | default: 'rgba(255, 255, 255, 0.75)' }};
  }

  /* Capsules Grid */
  .capsules-grid {
    display: grid;
    gap: var(--spacing-lg, 2.5rem);
    margin-bottom: var(--spacing-xl, 4rem);
  }

  .capsules-grid--2 {
    grid-template-columns: repeat(auto-fit, minmax(min(100%, 400px), 1fr));
  }

  .capsules-grid--3 {
    grid-template-columns: repeat(auto-fit, minmax(min(100%, 320px), 1fr));
  }

  .capsules-grid--4 {
    grid-template-columns: repeat(auto-fit, minmax(min(100%, 280px), 1fr));
  }

  /* Section CTA */
  .section-cta {
    text-align: center;
  }

  .section-cta .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
  }

  /* Responsive */
  @media (max-width: 768px) {
    #featured-{{ section.id }} {
      padding: var(--spacing-lg, 2.5rem) 0;
    }

    .capsules-grid {
      grid-template-columns: 1fr;
      gap: var(--spacing-md, 1.5rem);
    }
  }

  @media (min-width: 769px) and (max-width: 1024px) {
    .capsules-grid--4 {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>

{% schema %}
{
  "name": "Featured Capsules",
  "max_blocks": 12,
  "settings": [
    {
      "type": "header",
      "content": "Section Header"
    },
    {
      "type": "text",
      "id": "eyebrow_text",
      "label": "Eyebrow text",
      "default": "Newest Drops"
    },
    {
      "type": "color",
      "id": "eyebrow_color",
      "label": "Eyebrow color",
      "default": "#28A8D6"
    },
    {
      "type": "color",
      "id": "eyebrow_border",
      "label": "Eyebrow border color",
      "default": "#28A8D6"
    },
    {
      "type": "text",
      "id": "eyebrow_background",
      "label": "Eyebrow background (CSS)",
      "default": "rgba(40, 168, 214, 0.2)"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Featured Capsules"
    },
    {
      "type": "text",
      "id": "title_gradient",
      "label": "Title gradient (CSS)",
      "default": "linear-gradient(135deg, #E13CFA, #28A8D6)"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Explore our latest cosmic transmissions"
    },
    {
      "type": "color",
      "id": "subtitle_color",
      "label": "Subtitle color",
      "default": "#FFFFFF"
    },
    {
      "type": "header",
      "content": "Grid Layout"
    },
    {
      "type": "range",
      "id": "grid_columns",
      "min": 2,
      "max": 4,
      "step": 1,
      "label": "Desktop columns",
      "default": 3
    },
    {
      "type": "select",
      "id": "image_ratio",
      "label": "Image ratio",
      "options": [
        { "value": "square", "label": "Square (1:1)" },
        { "value": "portrait", "label": "Portrait (3:4)" },
        { "value": "landscape", "label": "Landscape (4:3)" }
      ],
      "default": "square"
    },
    {
      "type": "header",
      "content": "Product Cards"
    },
    {
      "type": "checkbox",
      "id": "show_badges",
      "label": "Show stock badges",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_quick_add",
      "label": "Show quick add button",
      "default": true
    },
    {
      "type": "header",
      "content": "View All CTA"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show 'View All' button",
      "default": true
    },
    {
      "type": "text",
      "id": "view_all_text",
      "label": "Button text",
      "default": "View All Capsules"
    },
    {
      "type": "url",
      "id": "view_all_url",
      "label": "Button URL",
      "default": "/collections/all"
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Featured Capsules",
      "blocks": [
        { "type": "product" },
        { "type": "product" },
        { "type": "product" }
      ]
    }
  ]
}
{% endschema %}
