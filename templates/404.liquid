{% comment %}
  ═══════════════════════════════════════════════════════════
  STELLAR REVERB - 404 ERROR PAGE
  ═══════════════════════════════════════════════════════════
  
  Cosmic-themed "signal lost" page
  
  ═══════════════════════════════════════════════════════════
{% endcomment %}

<div class="error-404">
  <div class="container">
    <div class="error-content">
      
      {%- comment -%} Glitching 404 Number {%- endcomment -%}
      <div class="error-number">
        <span class="glitch-text" data-text="404" aria-hidden="true">404</span>
      </div>

      {%- comment -%} Error Message {%- endcomment -%}
      <h1 class="error-title">
        {{ 'general.404.title' | t | default: 'Signal Lost' }}
      </h1>

      <p class="error-message">
        {{ 'general.404.subtext' | t | default: 'This transmission doesn\'t exist in our archive.' }}
      </p>

      {%- comment -%} CTA Buttons {%- endcomment -%}
      <div class="error-actions">
        <a href="{{ routes.root_url }}" class="btn btn-primary">
          <svg width="20" height="20" viewBox="0 0 20 20" fill="none" stroke="currentColor">
            <path d="M15 10l-5-5-5 5M10 5v10" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
          {{ 'general.404.link' | t | default: 'Return to Home Base' }}
        </a>
        
        <a href="{{ routes.all_products_collection_url }}" class="btn btn-secondary">
          {{ 'general.breadcrumbs.shop' | t | default: 'Browse Capsules' }}
        </a>
      </div>

      {%- comment -%} Search {%- endcomment -%}
      <div class="error-search">
        <p class="error-search-label">Or search for what you're looking for:</p>
        <form action="{{ routes.search_url }}" method="get" role="search">
          <div class="search-field">
            <input
              type="search"
              name="q"
              placeholder="{{ 'general.search.placeholder' | t | default: 'Search transmissions...' }}"
              class="search-input"
              autocomplete="off"
            >
            <button type="submit" class="search-submit">
              <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
                <circle cx="9" cy="9" r="7" stroke="currentColor" stroke-width="2"/>
                <path d="M14 14l4 4" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
              </svg>
              <span class="visually-hidden">{{ 'general.search.submit' | t }}</span>
            </button>
          </div>
        </form>
      </div>

      {%- comment -%} Popular Links {%- endcomment -%}
      {% if linklists.main-menu.links.size > 0 %}
        <div class="error-links">
          <p class="error-links-label">Popular pages:</p>
          <ul class="quick-links" role="list">
            {% for link in linklists.main-menu.links limit: 4 %}
              <li>
                <a href="{{ link.url }}">{{ link.title }}</a>
              </li>
            {% endfor %}
          </ul>
        </div>
      {% endif %}

    </div>
  </div>
</div>

<style>
  .error-404 {
    min-height: 70vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--spacing-xl, 4rem) 0;
  }

  .error-content {
    max-width: 600px;
    margin: 0 auto;
    text-align: center;
  }

  /* Glitching 404 Number */
  .error-number {
    font-family: var(--font-title, "Orbitron", sans-serif);
    font-size: clamp(6rem, 15vw, 12rem);
    font-weight: 900;
    line-height: 1;
    margin-bottom: var(--spacing-md, 1.5rem);
    position: relative;
  }

  .error-number .glitch-text {
    background: linear-gradient(135deg, var(--neon-magenta, #E13CFA), var(--cyan-blue, #28A8D6));
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  /* Title */
  .error-title {
    font-family: var(--font-title, "Orbitron", sans-serif);
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 800;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    margin-bottom: var(--spacing-sm, 1rem);
    color: #fff;
  }

  /* Message */
  .error-message {
    font-family: var(--font-body, "Montserrat", sans-serif);
    font-size: 1.125rem;
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.75);
    margin-bottom: var(--spacing-lg, 2.5rem);
  }

  /* Actions */
  .error-actions {
    display: flex;
    gap: var(--spacing-sm, 1rem);
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: var(--spacing-lg, 2.5rem);
  }

  /* Search */
  .error-search {
    margin-bottom: var(--spacing-lg, 2.5rem);
  }

  .error-search-label {
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.7);
    margin-bottom: var(--spacing-sm, 1rem);
  }

  .search-field {
    display: flex;
    gap: 0.5rem;
    max-width: 500px;
    margin: 0 auto;
  }

  .search-input {
    flex: 1;
    padding: 0.875rem 1.25rem;
    border-radius: var(--border-radius-pill, 999px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    background: rgba(0, 0, 0, 0.5);
    color: #fff;
    font-family: var(--font-body, "Montserrat", sans-serif);
    font-size: 1rem;
    transition: all 0.2s ease;
  }

  .search-input::placeholder {
    color: rgba(255, 255, 255, 0.5);
  }

  .search-input:focus {
    outline: none;
    border-color: var(--cyan-blue, #28A8D6);
    box-shadow: 0 0 16px rgba(40, 168, 214, 0.5);
  }

  .search-submit {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    border: none;
    background: linear-gradient(135deg, var(--cyan-blue, #28A8D6), var(--neon-magenta, #E13CFA));
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .search-submit:hover {
    filter: brightness(1.1);
    box-shadow: 0 0 20px rgba(225, 60, 250, 0.8);
    transform: scale(1.05);
  }

  /* Quick Links */
  .error-links {
    padding-top: var(--spacing-lg, 2.5rem);
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .error-links-label {
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.7);
    margin-bottom: var(--spacing-sm, 1rem);
  }

  .quick-links {
    display: flex;
    gap: var(--spacing-sm, 1rem);
    justify-content: center;
    flex-wrap: wrap;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .quick-links a {
    font-family: var(--font-title, "Orbitron", sans-serif);
    font-size: 0.85rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    text-decoration: none;
    color: var(--cyan-blue, #28A8D6);
    padding: 0.5rem 1rem;
    border-radius: var(--border-radius-pill, 999px);
    border: 1px solid rgba(40, 168, 214, 0.3);
    transition: all 0.2s ease;
  }

  .quick-links a:hover {
    background: rgba(40, 168, 214, 0.15);
    border-color: rgba(40, 168, 214, 0.6);
    box-shadow: 0 0 16px rgba(40, 168, 214, 0.5);
  }

  /* Responsive */
  @media (max-width: 640px) {
    .error-actions {
      flex-direction: column;
      width: 100%;
    }

    .error-actions .btn {
      width: 100%;
    }

    .search-field {
      flex-direction: column;
    }

    .search-submit {
      width: 100%;
      height: 50px;
      border-radius: var(--border-radius-pill, 999px);
    }
  }
</style>
