    transform: translate(-2px, 1px);
  }
  94% {
    color: #00f0ff;
    text-shadow: 
      2px 0 #ff00ff,
      -2px 0 #00f0ff,
      0 0 20px #00f0ff;
    transform: translate(2px, -1px);
  }
}

