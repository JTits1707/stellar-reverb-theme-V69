  color: #00f0ff;
  text-shadow: 
    0 0 10px #00f0ff,
    0 0 20px #00f0ff,
    0 0 40px #ff00ff,
    0 0 80px #ff00ff;
  animation: glitch-cyan-magenta 3s infinite;
}

@keyframes glitch-cyan-magenta {
  0%, 90%, 100% {
    color: #00f0ff;
    text-shadow: 
      0 0 10px #00f0ff,
      0 0 20px #00f0ff,
      0 0 40px #ff00ff;
  }
  92% {
