/* ────────────────────────────────────────────────────────────
   SCANLINE OVERLAY
   ──────────────────────────────────────────────────────────── */

.hero-cosmic::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: repeating-linear-gradient(
    0deg,
    rgba(0, 0, 0, 0.15),
    rgba(0, 0, 0, 0.15) 1px,
    transparent 1px,
    transparent 2px
  );
  pointer-events: none;
  z-index: 10;
  animation: scanlines 8s linear infinite;
}

@keyframes scanlines {
  0% {
    transform: translateY(0);
  }
  100% {
    transform: translateY(10px);
  }
}

/* ────────────────────────────────────────────────────────────
   CHROMATIC ABERRATION (RGB Split)
   ──────────────────────────────────────────────────────────── */

.cosmic-title.chromatic {
  position: relative;
}

.cosmic-title.chromatic::before {
  content: attr(data-text);
  position: absolute;
  left: -2px;
  color: #ff00ff;
  opacity: 0.8;
  mix-blend-mode: screen;
  animation: chromatic-left 0.5s infinite;
}

.cosmic-title.chromatic::after {
  content: attr(data-text);
  position: absolute;
  left: 2px;
  color: #00f0ff;
  opacity: 0.8;
  mix-blend-mode: screen;
  animation: chromatic-right 0.5s infinite;
}

@keyframes chromatic-left {
  0%, 100% { transform: translateX(0); }
  50% { transform: translateX(-3px); }
}

@keyframes chromatic-right {
  0%, 100% { transform: translateX(0); }
  50% { transform: translateX(3px); }
}

/* ────────────────────────────────────────────────────────────
   VHS NOISE OVERLAY (Optional)
   ──────────────────────────────────────────────────────────── */

.hero-cosmic::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-image: 
    repeating-linear-gradient(
      0deg,
      transparent,
      transparent 2px,
      rgba(255, 255, 255, 0.03) 2px,
      rgba(255, 255, 255, 0.03) 4px
    );
  pointer-events: none;
  opacity: 0.5;
  z-index: 5;
  animation: vhs-noise 0.2s infinite;
}

@keyframes vhs-noise {
  0%, 100% { 
    opacity: 0.5;
    transform: translateY(0);
  }
  50% { 
    opacity: 0.3;
    transform: translateY(2px);
  }
}

/* ────────────────────────────────────────────────────────────
   BLINKING CURSOR (Terminal Effect)
   ──────────────────────────────────────────────────────────── */

.cosmic-cursor {
  display: inline-block;
  width: 3px;
  height: 1em;
  background: currentColor;
  margin-left: 0.1em;
  animation: blink 1s infinite;
  vertical-align: middle;
}

@keyframes blink {
  0%, 49% { opacity: 1; }
  50%, 100% { opacity: 0; }
}

/* ────────────────────────────────────────────────────────────
   RESPONSIVE ADJUSTMENTS
   ──────────────────────────────────────────────────────────── */

@media (max-width: 768px) {
  .cosmic-title {
    font-size: clamp(2rem, 8vw, 4rem);
  }
  
  /* Reduce glitch intensity on mobile for performance */
  .cosmic-title::before,
  .cosmic-title::after {
    animation-duration: 8s;
  }
}

/* ────────────────────────────────────────────────────────────
   ACCESSIBILITY
   ──────────────────────────────────────────────────────────── */

@media (prefers-reduced-motion: reduce) {
  .cosmic-title,
  .cosmic-title::before,
  .cosmic-title::after,
  .hero-cosmic::before,
  .hero-cosmic::after,
  .cosmic-cursor {
    animation: none !important;
  }
  
  .cosmic-title {
    text-shadow: 0 0 10px currentColor;
  }
}