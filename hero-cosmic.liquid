    {
      "type": "text",
      "id": "transmission_text",
      "label": "Transmission Text",
      "default": "TRANSMISSION: SYNAPSE_INIT"
    },
    {
      "type": "text",
      "id": "hero_title",
      "label": "Hero Title",
      "default": "STELLAR REVERB"
    },
    {
      "type": "text",
      "id": "hero_subtitle",
      "label": "Hero Subtitle",
      "default": "Sound. Style. Transmissions Of Cosmic Identity."
    },
    {
      "type": "text",
      "id": "decode_text",
      "label": "Decode Text",
      "default": "DECODING: ECHO SIGNAL MATCHED."
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Button Text",
      "default": "INITIATE SIGNAL LOCK"
    }
  ],
  "presets": [
    {
      "name": "Cosmic Hero"
    }
  ]
}
{% endschema %}